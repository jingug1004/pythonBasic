<?xml version="1.0" encoding="EUC-KR"?>
<!-- 
월별지급기준 등록 
 -->
<service name="e07010030" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutMonthPayBac|dsOutMonthPayPrior" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchMonthPayBac"      value="searchMonthPayBac" />
    <transition name="searchMonthPayPrior"      value="searchMonthPayPrior" />
    <transition name="saveMonthPayBac"    value="saveMonthPayBac" />
    <transition name="saveMonthPaySendMailReq"    value="saveMonthPaySendMailReq" />
    <transition name="success" value="end" />
  </activity>
  
  

  <!-- 월별지급기준 조회   -->
  <activity name="searchMonthPayBac" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutMonthPayBac" />
    <property name="sqlkey" value="tbeg_month_pay_bac_ff001" />
    <property name="param-count" value="5" />
    <property name="param0" value="STND_YEAR"/>
    <property name="param1" value="MBR_CD"/>
    <property name="param2" value="STND_YEAR"/>
    <property name="param3" value="STND_YEAR"/>
    <property name="param4" value="STND_YEAR"/>
    <property name="dao" value="boadao" />
  </activity>
  
  
  <!-- 월별지급기준 조회 (상금계산시 표기)  -->
  <activity name="searchMonthPayPrior" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutMonthPayPrior" />
    <property name="sqlkey" value="tbeg_month_pay_bac_ff010" />
    <property name="param-count" value="6" />
    <property name="param0" value="STND_YEAR"/>
    <property name="param1" value="STND_YEAR"/>
    <property name="param2" value="STND_YEAR"/>
    <property name="param3" value="STND_YEAR"/>
    <property name="param4" value="STND_YEAR"/>
    <property name="param5" value="PAY_MONTH"/>
    
    <property name="dao" value="boadao" />
  </activity>
  
 
  <!-- 월별지급기준 저장-->
  <activity name="saveMonthPayBac" class="snis.boa.financial.e07010030.activity.SaveMonthPayBac">
    <transition name="success" value="searchMonthPayBac" />
  </activity>
  
  
  <!-- 월별지급기준 저장-->
  <activity name="saveMonthPaySendMailReq" class="snis.boa.financial.e07010030.activity.SaveMonthPaySendMailReq">
    <transition name="success" value="searchMonthPayBac" />
  </activity>
  
  
  
  <transaction-manager id="tx_boa" commit="true" />
</service>

