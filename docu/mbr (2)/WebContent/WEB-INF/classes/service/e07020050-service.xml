<?xml version="1.0" encoding="EUC-KR"?>
<!-- 회차별 경주 성적  -->
<service name="e07020050" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutRacePriz|dsOutTmsRacePrizStat|dsLastTms" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchRacePriz"      value="searchRacePriz" />
    <transition name="searchLastPrizTms"   value="searchLastPrizTms" />
    <transition name="saveRacePriz"    value="saveRacePriz" />
    <transition name="calcRacePriz"    value="calcRacePriz" />
    <transition name="success" value="end" />
  </activity>

  <!--회차별 경주 성적 조회   -->
  <activity name="searchRacePriz" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="searchRacePrizStat" />
    <property name="resultkey" value="dsOutRacePriz" />
    <property name="sqlkey" value="tbeg_race_priz_ff001" />
    <property name="param-count" value="8" />
    <property name="param0" value="STND_YEAR"/>
    <property name="param1" value="MBR_CD"/>
    <property name="param2" value="TMS"/>
    <property name="param3" value="DAY_ORD"/>
    <property name="param4" value="DAY_ORD"/>
    <property name="param5" value="STND_YEAR"/>
    <property name="param6" value="MBR_CD"/>
    <property name="param7" value="TMS"/>
    <property name="dao" value="boadao" />
  </activity>
  
  
  <!-- 회차별 경주 성적 조회   -->
  <activity name="searchRacePrizStat" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutTmsRacePrizStat" />
    <property name="sqlkey" value="tbeg_race_priz_ff002" />
    <property name="param-count" value="3" />
    <property name="param0" value="STND_YEAR"/>
    <property name="param1" value="MBR_CD"/>
    <property name="param2" value="TMS"/>
    <property name="dao" value="boadao" />
  </activity>
  
  <!-- 회차별 경주 성적 조회   -->
  <activity name="searchLastPrizTms" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 		value="end" />
    <property name="resultkey" 		value="dsLastTms" />
    <property name="sqlkey" 		value="tbeg_race_priz_ff005" />
    <property name="param-count" 	value="2" />
    <property name="param0" 		value="STND_YEAR"/>
    <property name="param1" 		value="MBR_CD"/>
    <property name="dao" 			value="boadao" />
  </activity>
 
  <!-- 회차별 경주 성적 저장-->
  <activity name="saveRacePriz" class="snis.boa.financial.e07020050.activity.SaveRacePriz">
    <transition name="success" value="searchRacePriz" />
  </activity>
  
  
  <!-- 회차별 경주 성적 계산-->
  <activity name="calcRacePriz" class="snis.boa.financial.e07020050.activity.CalcRacePriz">
    <transition name="success" value="searchRacePriz" />
  </activity>
  
  
  <transaction-manager id="tx_boa" commit="true" />
</service>

