<?xml version="1.0" encoding="EUC-KR"?>
<service name="e01010020" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsUserListValue|dsIdCheckValue|dsCountValue" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchIdCheck"			value="searchIdCheck" />
    <transition name="searchUser"				value="searchUser" />
    <transition name="searchUserAll"			value="searchUserAll" />
    <transition name="searchUserCount"  		value="searchUserCount" />              
    <transition name="saveUser"					value="saveUser" />           
    <transition name="success" 					value="end" />
  </activity>

  <!-- ID 체크 -->
  <activity name="searchIdCheck" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 					value="end" />
    <property name="resultkey" 					value="dsIdCheckValue" />    
    <property name="sqlkey" 					value="tbea_user_fa001" />    
    <property name="dao" 						value="boadao" />
    <property name="param-count" 				value="1" />
    <property name="param0" 					value="USER_ID" />      
  </activity>  
  
  
  <!-- 사용자 조회 -->
  <activity name="searchUserAll" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 					value="end" />
    <property name="resultkey" 					value="dsUserListValue" />
    <property name="sqlkey" 					value="tbea_user_fa004" />    
    <property name="param-count" 				value="2"    />
    <property name="param0"  					value="USER_NM"  />      
    <property name="param1"  					value="TEAM_NM"  />          
    <property name="dao"     					value="boadao"   />
  </activity>
  
    
  <!-- 사용자 조회 -->
  <activity name="searchUser" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 					value="searchUserCount" />
    <property name="resultkey" 					value="dsUserListValue" />
    <property name="sqlkey" 					value="tbea_user_fa002" />    
    <property name="param-count" 				value="5"    />
    <property name="param0"  					value="USER_NM"  />      
    <property name="param1"  					value="ROWNUM1"  />    
    <property name="param2"  					value="ROWNUM2"  />   
    <property name="param3"  					value="ROWNUM3"  />    
    <property name="param4"  					value="ROWNUM4"  />     
    <property name="dao"     					value="boadao"   />
  </activity>
  
  <!-- 사용자 카운트 조회 -->
  <activity name="searchUserCount" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 					value="end" />
    <property name="resultkey" 					value="dsCountValue" />
    <property name="sqlkey" 					value="tbea_user_fa003" />
    <property name="dao" 						value="boadao" />    
    <property name="param-count" 				value="1" />
    <property name="param0" 					value="USER_NM" />
  </activity>  
  
  <!-- 사용자 저장 -->
  <activity name="saveUser" class="snis.boa.system.e01010020.activity.SaveUser">
    <transition name="success" value="end" />      
  </activity>        
  
  <transaction-manager id="tx_boa" commit="true" />
</service>