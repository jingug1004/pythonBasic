function fcCallBack(sServiceName, ErrorCode, ErrorMSG) {

	if ( !fnc_result(ErrorCode, ErrorMSG) ) return;
	
	// 조회 후
	if ( sServiceName == "e05010010-service:searchSancBasis" ) {
	    if(dsOutSancBasis.GetRowCount() > 0){
			fnc_SetStatus(SNIS_BOA_0003, dsOutSancBasis.GetRowCount());
	    }
	}

	// 저장 후
	if ( sServiceName == "e05010010-service:saveSancBasis" ) {
		if(dsOutSancBasis.GetRowCount() > 0){
			fnc_SetStatus(SNIS_BOA_0003, dsOutSancBasis.GetRowCount());
	    }
	}
	
	//오류가 없이 정상 처리되었다면...
	fcPostProcess(sServiceName);
}

