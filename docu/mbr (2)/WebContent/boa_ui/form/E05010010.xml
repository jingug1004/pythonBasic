/*-------------------------------------------------------------------------------------------------+
>>  저장 버튼 클릭 時 처리
+-------------------------------------------------------------------------------------------------*/
function fcSaveCheck(obj) {

	//변경된 자료가 있는지 체크
	if ( !fnc_DatasetChangeCheck(dsOutSancBasis))
	{
		//저장 할 자료가 없음
		fnc_Message(SNIS_COM_1006, "N");	
		return false;
	}

	// 필수항목체크
	oDataSet          = dsOutSancBasis;
	sMandatoryColID   = "SANC_BASIS_CD|STR_DT|END_DT|SMRY|SANC_ITEM";
	sMandatoryColName = "양정코드|적용시작일자|적용종료일자|양정내용(요약)|양정기준 상세내용";
	oGrid             = grdPageList;
	if ( fnc_GetMandatoryViolateRow(oDataSet, sMandatoryColID, sMandatoryColName, oGrid) > -1 ) {
	    return false;
	}
	if ( calSTR_DT.Value > calEND_DT.Value)
	{
		fnc_Message(SNIS_BOA_E001, "N");
		return false;
	}
	return true;
}

function fcSave(obj) {
    if ( !fcSaveCheck() ) return;
	var sServiceName = "e05010010-service:saveSancBasis";
    var sInDataSet   = "dsOutSancBasis=dsOutSancBasis:u";
    var sOutDataSet  = "dsOutSancBasis=dsOutSancBasis";

	fce_AddParam("SANC_BASIS_CD", edSANC_BASIS_CD.Value);
	fce_SendTransaction(sServiceName, sInDataSet, sOutDataSet, "fcCallBack");
}

