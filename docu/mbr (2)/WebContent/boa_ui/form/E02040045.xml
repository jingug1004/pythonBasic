+-------------------------------------------------------------------------------------------------*/
function btnConfirm_OnClick(obj)
{
	if ( !fnc_IsMandatory(cboRaceNo, "적용경주") ) return;
	
	var nCount = fnc_GetColumnValueCount(dsOutRacerList, "chk", 1);

	if ( nCount > 6 ) {
        fnc_Message("7명 이상 선택 하실 수 없습니다.", "N");
        return;
	}

	if ( nCount != 6 ) {
        if ( !fnc_Message("6명의 선수가 선택되지 않았습니다. 계속하시겠습니까?", "Y") ) return;
	}
	
	var asReturn = Array(2);
	asReturn[0] = cboRaceNo.Value;
	asReturn[1] = "";
	
	for ( var i = 0; i < dsOutRacerList.GetRowCount(); i++ ) {
        if ( dsOutRacerList.GetColumn(i, "chk") == "1" ) {
            asReturn[1] += dsOutRacerList.GetColumn(i, "RACER_NO") + "|";
        }
	}

	close(asReturn);
}
