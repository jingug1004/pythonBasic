function fcdsOnColumnChanged(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	if (strColumnID == "STR_DT" || strColumnID == "END_DT") {
		var sStrDT = dsTrngSche.GetColumn(nRow, "STR_DT");
		var sEndDT = dsTrngSche.GetColumn(nRow, "END_DT");
		if (!fnc_isNull(sStrDt) && !fnc_isNull(sEndDt)) {
			var date1 = (DateTime(sEndDT) - DateTime(sStrDT) + 1);
			dsTrngSche.setColumn(nRow, "TRNG_DD_NUM", date1);			
		}
		if (strColumnID == "STR_DT") {
			if (!fnc_isNull(sStrDt))
				dsTrngSche.setColumn(nRow, "STR_DAY", fcGetDay(GetDay(sStrDT)));	
		}
		if (strColumnID == "END_DT") {
			if (!fnc_isNull(sEndDt))
				dsTrngSche.setColumn(nRow, "END_DAY", fcGetDay(GetDay(sEndDt)));	
		}
	}
}

function fcGetDay(dayNo) 
{
	var DayNm = "";
	DayNm = Decode(dayNo, 0, "일", 1, "월", 2, "화", 3, "수", 4, "목", 5, "금", 6, "토", "");
