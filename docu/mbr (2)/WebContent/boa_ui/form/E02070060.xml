function fcCallBack(sServiceName, ErrorCode, ErrorMSG) {

	if ( !fnc_Result(ErrorCode, ErrorMSG) ) return;
	
	// 공통코드 조회시
	if ( sServiceName == "common-service:searchCode" ) {
		if (dsTrngYear.findrow("TRNG_YEAR", mid(today(),0,4)) < 0) {
			var nRow = dsTrngYear.insertRow(0);
			dsTrngYear.SetColumn(nRow, "TRNG_YEAR", mid(today(),0,4));
			cboYear.Index = 0;
		}
	
		// 조회
		fcSearch();
	}

	// 조회 후
	if ( sServiceName == "e02070060-service:searchTrngScheList" ) {
		dsTrngSche.row = -1;
	}
	// 저장 후
	if ( sServiceName == "e02070060-service:saveTrngSche" ) {
		fcSearch();		
	}

	//오류가 없이 정상 처리되었다면...
	fcPostProcess(sServiceName);
}

