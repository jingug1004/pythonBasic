    nRow = fnc_GetExistValue(dsOutFile, "FILE_ID", sFileID);
    sFileName = fcGetFileName("MAIL", "메일");
    dsOutFile.SetColumn(nRow  , "FILE_NAME", sFileName);

    sFileID  = fcGetFileID() + "print" + ".prn";
    nRow = fnc_GetExistValue(dsOutFile, "FILE_ID", sFileID);
    sFileName = fcGetFileName("PRINT", "_인쇄");
    dsOutFile.SetColumn(nRow  , "FILE_NAME", sFileName);

    sFileID  = fcGetFileID() + "homepage" + ".prn";
    nRow = fnc_GetExistValue(dsOutFile, "FILE_ID", sFileID);
    sFileName = fcGetFileName("PRINT", "_홈페이지");
    dsOutFile.SetColumn(nRow  , "FILE_NAME", sFileName);
    
    sFileID  = fcGetFileID() + "" + ".prn";
    nRow = fnc_GetExistValue(dsOutFile, "FILE_ID", sFileID);
    sFileName = fcGetFileName("PRINT", "");
    dsOutFile.SetColumn(nRow  , "FILE_NAME", sFileName);
    
    sFileID  = fcGetFileID() + "atch" + ".prn";
    nRow = fnc_GetExistValue(dsOutFile, "FILE_ID", sFileID);
    sFileName = fcGetFileName("PRINT", "_첨부");
    dsOutFile.SetColumn(nRow  , "FILE_NAME", sFileName);
    
    sFileID  = fcGetFileID() + "excel" + ".csv";
    nRow = fnc_GetExistValue(dsOutFile, "FILE_ID", sFileID);
    sFileName = fcGetFileName("PRINT", "EXCEL");
    dsOutFile.SetColumn(nRow  , "FILE_NAME", sFileName);
}

/*-------------------------------------------------------------------------------------------------+
>>  파일명 생성
+-------------------------------------------------------------------------------------------------*/
function fcGetFileName(sType, sName) {

    var sFileName = "";
    if ( sType == "PRINT" ) {
        if ( sName == "EXCEL" ) {
            sFileName = "경정출주표(" + sArr_OrganStatNm + "본)"
                      + "(" + substr(sArr_RaceDay, 4, 4) + ")"
                      + ".csv";
            return sFileName;
        }
    
        sFileName = substr(sArr_RaceDay, 0, 4) + "년"
                  + substr(sArr_RaceDay, 4, 2) + "월"
                  + substr(sArr_RaceDay, 6, 2) + "일"
                  + sArr_MbrNm
                  + "출주표(" + sArr_OrganStatNm + "본)"
                  + sName + ".TXT";
        return sFileName;
    }

    if ( sType == "ANTC" ) {
        sFileName = "경정출주표(" + sArr_OrganStatNm + "본)"
                  + "(" + substr(sArr_RaceDay, 4, 4) + ")"
                  + "-신문사" + sName + ".TXT";
        return sFileName;
    }  
    if ( sType == "MAIL" ) {
        sFileName = "경정출주표(" + sArr_OrganStatNm + "본)"
                  + "(" + substr(sArr_RaceDay, 4, 4) + ")"
                  + "-" + sName + ".TXT";
        return sFileName;
    }
}

/*-------------------------------------------------------------------------------------------------+
>>  파일 Url생성
+-------------------------------------------------------------------------------------------------*/
function fcGetFileID() {
    var sFileUrl  = sArr_StndYear
                  + sArr_MbrCd
                  + Lpad(sArr_Tms,         '0', 3)
                  + Lpad(sArr_DayOrd,      '0', 3)
                  + Lpad(sArr_OrganStatCd, '0', 3);
                  
    return sFileUrl;
}

/*-------------------------------------------------------------------------------------------------+
>>  파일다운로드
+-------------------------------------------------------------------------------------------------*/
function grdFile_OnCellDblClick(obj,nRow,nCell,nX,nY,nPivotIndex)
{
    var sLocalFileName  = fce_GetSelectFile("Save", dsOutFile.GetColumn(nRow, "FILE_NAME"));
    var sServerFileName = dsOutFile.GetColumn(nRow, "FILE_URL");
    var sFileSize       = dsOutFile.GetColumn(nRow, "FILE_SIZE");
    if ( sLocalFileName == null ) return;
    
	fnc_FileRead(divBtnLst.HttpFile, sLocalFileName[0] + "\\" + sLocalFileName[1], sServerFileName, sFileSize, nRow, "PROG_BAR", dsOutFile);
}

/*-------------------------------------------------------------------------------------------------+
>>  파일에 대한 정보를 저장한다.
+-------------------------------------------------------------------------------------------------*/
function fcSaveFileInfo()
{
	var sServiceName = "e02040060-service:saveFileInfo";
    var sInDataSet   = "dsOutFile=dsOutFile:a";
    var sOutDataSet  = "";
    
	fce_AddParam("STND_YEAR",     sArr_StndYear );
	fce_AddParam("MBR_CD",        sArr_MbrCd    );
	fce_AddParam("TMS",           sArr_Tms      );
	fce_AddParam("DAY_ORD",       sArr_DayOrd   );
	fce_AddParam("CFM_YN",        sArr_OrganStatCd );

	fce_SendTransaction(sServiceName, sInDataSet, sOutDataSet, "fcCallBack");
