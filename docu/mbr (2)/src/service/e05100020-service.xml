<?xml version="1.0" encoding="EUC-KR"?>
<service name="e05100020" initial="SetResultKeys">
    
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutRacerMeasure|dsOutRaceAnal|dsMeasureStat|dsMeasureHist|dsOutRace" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchRacerMeasure"	value="searchRacerMeasure" />
    <transition name="searchRaceAnal"		value="searchRaceAnal" />
    <transition name="searchMeasureStat"	value="searchMeasureStat" />
    <transition name="searchMeasureHist"	value="searchMeasureHist" />
    <transition name="searchRace"			value="searchRace" />
    <transition name="saveRaceAnal"			value="saveRaceAnal" />
    <transition name="success"				value="end" />
  </activity>
 
  <!-- 경주분석결과조회 -->
 <activity name="searchRacerMeasure" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutRacerMeasure" />
    <property name="sqlkey" value="tbee_risk_mng_fd201" />
    <property name="param-count" value="5" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR"/>
    <property name="param1" value="MBR_CD"/>
    <property name="param2" value="TMS"/>
    <property name="param3" value="DAY_ORD"/>
    <property name="param4" value="RACE_NO"/>
  </activity>
 
  <!-- 조회 -->
  <activity name="searchRaceAnal" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="searchMeasureStat" />
    <property name="resultkey" value="dsOutRaceAnal" />
    <property name="sqlkey" value="tbee_risk_mng_fd202" />
    <property name="param-count" value="5" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR"/> 
    <property name="param1" value="MBR_CD"/> 
    <property name="param2" value="TMS"/> 
    <property name="param3" value="DAY_ORD"/> 
    <property name="param4" value="RACE_NO"/>
  </activity>    
  
  <!-- 공정위기관리: 조치결과 조회 -->
  <activity name="searchMeasureStat" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsMeasureStat" />
    <property name="sqlkey" value="tbee_risk_mng_fd203" />
    <property name="param-count" value="5" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR"/> 
    <property name="param1" value="MBR_CD"/> 
    <property name="param2" value="TMS"/> 
    <property name="param3" value="DAY_ORD"/> 
    <property name="param4" value="RACE_NO"/>
  </activity> 
  
    <!-- 공정위기관리: 조치내역 조회 -->
  <activity name="searchMeasureHist" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsMeasureHist" />
    <property name="sqlkey" value="tbee_risk_mng_fd204" />
    <property name="param-count" value="2" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR"/> 
    <property name="param1" value="RACER_NO"/>
  </activity>
  
  <!-- 공정위기관리: 경주정보 조회 -->
  <activity name="searchRace" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutRace" />
    <property name="sqlkey" value="tbee_risk_mng_fd001" />
    <property name="param-count" value="4" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR"/> 
    <property name="param1" value="MBR_CD"/> 
    <property name="param2" value="TMS"/> 
    <property name="param3" value="DAY_ORD"/> 
  </activity>   

  <!-- 결과 분석 등록 -->
  <activity name="saveRaceAnal" class="snis.boa.fairness.e05100020.activity.SaveRaceAnal">
    <transition name="success" value="end" />
  </activity>

  <transaction-manager id="tx_boa" commit="true" />
</service>