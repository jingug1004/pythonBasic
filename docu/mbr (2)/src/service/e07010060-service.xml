<?xml version="1.0" encoding="EUC-KR"?>
<!-- 수당 지급 기준 등록  -->
<service name="e07010060" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutAllowBac|dsSpecCodeListValue" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchAllowBac"      value="searchAllowBac" />
    <transition name="saveAllowBac"    value="saveAllowBac" />
    <transition name="success" value="end" />
  </activity>

  <!-- 수당 지급 기준 조회   -->
  <activity name="searchAllowBac" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="searchSpecCode" />
    <property name="resultkey" value="dsOutAllowBac" />
    <property name="sqlkey" value="tbeg_allow_bac_ff001" />
    <property name="param-count" value="1" />
    <property name="param0" value="STND_YEAR"/>
    <property name="dao" value="boadao" />
  </activity>
  
  <!-- 연승상금 지급기준 조회(공통코드 E00138) -->
  <activity name="searchSpecCode" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsSpecCodeListValue" />
    <property name="sqlkey" 				value="tbea_spec_cd_fa002" />
    <property name="param-count" 			value="1" />
    <property name="param0" 				value="GRP_CD" />  
    <property name="dao" 					value="boadao" />    
  </activity>
 
  <!-- 수당 지급 기준 저장-->
  <activity name="saveAllowBac" class="snis.boa.financial.e07010060.activity.SaveAllowBac">
    <transition name="success" value="saveConWin" />
  </activity>
  
  <!-- 연승상금 지급기준 저장(공통코드 E00138) -->
  <activity name="saveConWin" 				class="snis.boa.system.e01010010.activity.SaveCode">
    <transition name="success" 	value="searchAllowBac" />
  </activity>
  
  
  <transaction-manager id="tx_boa" commit="true" />
</service>

