<?xml version="1.0" encoding="EUC-KR"?>
<service name="e05100070" initial="SetResultKeys">
    
    <activity name="SetResultKeys" 			class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" 	value="resultkey.properties" />
    <property name="resultKeyList" 			value="dsList|dsListDetl|dsBrncCd|dsOutRiskBranch" />
    <transition name="success" 				value="EventRouter" />
  </activity>

  <activity name="EventRouter" 					class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchList"  				value="searchList" />
    <transition name="searchListDetl"  			value="searchListDetl" />
    <transition name="searchRbmCode"  			value="searchRbmCode" /> 
    <transition name="searchRiskBranch"  		value="searchRiskBranch" />   
    <transition name="saveRiskBranch"  			value="saveRiskBranch" />
    <transition name="success" 					value="end" />
  </activity>


  <!--지점코드 조회 -->
  <activity name="searchRbmCode" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsBrncCd" />
    <property name="sqlkey"					value="e05100070_s01" />
    <property name="param-count" 			value="0" />
    <property name="dao" 					value="boadao" />  
  </activity>                 

  <!--집중배팅 목록조회 -->
  <activity name="searchList" 				class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsList" />
    <property name="sqlkey"					value="e05100070_s02" />
    <property name="param-count" 			value="9" />  
    <property name="param0" 				value="STND_YEAR" />
    <property name="param1" 				value="MBR_CD" />
    <property name="param2" 				value="TMS" />
    <property name="param3" 				value="DAY_ORD" />    
    <property name="param4" 				value="RACE_NO" />    
    <property name="param5" 				value="RACE_NO" />
    <property name="param6" 				value="BRNC_CD" />
    <property name="param7" 				value="WIN_NO" />
    <property name="param8" 				value="TSN" />
    <property name="dao" 					value="boadao" />
  </activity> 
  
    <!--집중배팅 세부내역 조회 -->
  <activity name="searchListDetl" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsListDetl" />
    <property name="sqlkey"					value="e05100070_s04" />
    <property name="param-count" 			value="8" />  
    <property name="param0" 				value="STND_YEAR" />
    <property name="param1" 				value="RACE_DAY" />
    <property name="param2" 				value="RACE_NO" />    
    <property name="param3" 				value="RACE_NO" />
    <property name="param4" 				value="COMM_NO" />
    <property name="param5" 				value="DIV_NO" />
    <property name="param6" 				value="WIN_NO" />
    <property name="param7" 				value="BET_SUMMARY" />
    <property name="dao" 					value="boadao" />
  </activity> 
  
  <!--지점별 집중베팅 리스크 조회 -->
  <activity name="searchRiskBranch" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsOutRiskBranch" />
    <property name="sqlkey"					value="e05100070_s03" />
    <property name="param-count" 			value="5" />
    <property name="param0" 				value="STND_YEAR" />
    <property name="param1" 				value="MBR_CD" />
    <property name="param2" 				value="TMS" />
    <property name="param3" 				value="DAY_ORD" />    
    <property name="param4" 				value="RACE_NO" />    
    <property name="dao" 					value="boadao" />  
  </activity>   

  <!-- 지점별 집중베팅 리스크 등록 -->
  <activity name="saveRiskBranch"             class="snis.boa.fairness.e05100070.activity.SaveRiskBranch">
     <transition name="success"              value="end" />
  </activity>                 
  <transaction-manager id="tx_boa" commit="true" />
</service>