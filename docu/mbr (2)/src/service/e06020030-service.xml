<?xml version="1.0" encoding="EUC-KR"?>
<service name="e06020030" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutOrderList|dsOutOrderPartsList" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchOrder"  		value="searchOrder" />    
    <transition name="searchOrderParts"  	value="searchOrderParts" />
    <transition name="saveOrder"   			value="saveOrder" />    
    <transition name="success" 				value="end" />
  </activity>


  <!-- 주문서  조회      -->
  <activity name="searchOrder" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutOrderList" />
    <property name="sqlkey" value="tbef_order_ff001" />
    <property name="param-count" value="4" />
    <property name="dao" value="boadao" />
    <property name="param0" value="MBR_CD"/>
    <property name="param1" value="STND_YEAR"/>
    <property name="param2" value="ORDER_SDT"/>
    <property name="param3" value="ORDER_EDT"/>
  </activity>
  
  <!-- 주문 상세내역  조회      -->
  <activity name="searchOrderParts" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutOrderPartsList" />
    <property name="sqlkey" value="tbef_order_ff002" />
    <property name="param-count" value="3" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR"/>
    <property name="param1" value="MBR_CD"/>
    <property name="param2" value="ORDER_SEQ"/>
  </activity>
  
  <!-- 주문서저장 -->
  <activity name="saveOrder" class="snis.boa.equipment.e06020030.activity.SaveOrder">
    <transition name="success" 	value="searchOrder" />
  </activity>
   
  <transaction-manager id="tx_boa" commit="true" />
</service>

