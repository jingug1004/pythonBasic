<?xml version="1.0" encoding="EUC-KR"?>
<service name="common_help" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutRacer|dsOutSancBasis|dsOutRacerSanc|dsOutProcess" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchRacer"		value="searchRacer" />
    <transition name="searchSancBasis"	value="searchSancBasis" />
    <transition name="searchRacerSanc"	value="searchRacerSanc" />
    <transition name="searchProg"	    value="searchProg" />
    <transition name="success" value="end" />
  </activity>

  <!-- 선수 조회 -->
  <activity name="searchRacer" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutRacer" />
    <property name="sqlkey" value="common_tbec_racer_detail_fc001" />
    <property name="param-count" value="2" />
    <property name="dao" value="boadao" />
    <property name="param0" value="RACER_NO" />
    <property name="param1" value="NM_KOR"   />
  </activity>
  
  <!-- 양정코드 조회 -->
  <activity name="searchSancBasis" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutSancBasis" />
    <property name="sqlkey" value="common_tbee_sanc_basis_fe001" />
    <property name="param-count" value="1" />
    <property name="dao" value="boadao" />
    <property name="param0" value="SANC_BASIS_CD" />
  </activity>

  <!-- 선수제재조회 -->
  <activity name="searchRacerSanc" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutRacerSanc" />
    <property name="sqlkey" value="common_tbee_racer_sanc_fb001" />
    <property name="param-count" value="2" />
    <property name="dao" value="boadao" />
    <property name="param0" value="RACER_NO" />
    <property name="param1" value="SANC_ISSUE_NO" />
  </activity>

  <!-- 진행상태조회 -->
  <activity name="searchProg" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutProcess" />
    <property name="sqlkey" value="tbea_duty_prs_hst_fa002" />
    <property name="param-count" value="0" />
    <property name="dao" value="boadao" />
  </activity>

  <transaction-manager id="tx_boa" commit="true" />
</service>

