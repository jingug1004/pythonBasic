<?xml version="1.0" encoding="EUC-KR"?>
<service name="e02030036" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutMailNoti|dsOutMailNotiList" />
    <transition name="success" value="EventRouter" />
  </activity>

  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchMailNoti"       value="searchMailNoti" />
    <transition name="searchMailNotiList"   value="searchMailNotiList" />
    <transition name="searchTargetRacer"    value="searchTargetRacer" />
    <transition name="saveMailNoti"         value="saveMailNoti" />    
    <transition name="success" value="end" />
  </activity>

  <!-- 선수메일통지 조회 -->
  <activity name="searchMailNoti" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutMailNoti" />
    <property name="sqlkey" value="tbeb_mail_noti_fb001" />
    <property name="param-count" value="2" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR" />
    <property name="param1" value="STND_YEAR" />
  </activity>
  
  <!-- 선수메일통지 조회 -->
  <activity name="searchMailNotiList" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutMailNotiList" />
    <property name="sqlkey" value="tbeb_mail_noti_fb002" />
    <property name="param-count" value="5" />
    <property name="dao" value="boadao" />
    <property name="param0" value="WORKDAY" />
    <property name="param1" value="STND_YEAR" />
    <property name="param2" value="SEQ" />
    <property name="param3" value="STND_YEAR" />
    <property name="param4" value="SEQ" />
  </activity>
  
  <!-- 선수메일통지 조회 -->
  <activity name="searchTargetRacer" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutMailNotiList" />
    <property name="sqlkey" value="tbeb_mail_noti_fb003" />
    <property name="param-count" value="0" />
    <property name="dao" value="boadao" />
  </activity>
  
  <!-- 선수메일통지 저장 -->
  <activity name="saveMailNoti" class="snis.boa.organization.e02030036.activity.SaveMailNoti">
    <transition name="success" value="searchMailNoti" />
  </activity>

  <transaction-manager id="tx_boa" commit="true" />
</service>

