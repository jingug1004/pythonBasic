	$(window).load(function(){
		$("body").on("keydown", function(event){
			if($("#ct_retrieve_btn_type03").prop('disabled') == false){
				if(event.keyCode==13 && event.target.name!="grid_count"){
					getOrderApprovalGridList();
				return false;
				}
