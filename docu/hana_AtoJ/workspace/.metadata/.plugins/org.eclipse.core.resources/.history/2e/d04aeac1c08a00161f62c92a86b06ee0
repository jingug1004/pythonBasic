    					<![CDATA[
							SELECT   A.YMD          YMD,
							         A.GUMAE_NO     GUMAE_NO,
							         A.ITEM_ID      ITEM_ID,
							         B.ITEM_NM      ITEM_NM,
							         A.QTY          QTY,   
							         A.DANGA        DANGA,   
							         A.AMT          AMT,   
