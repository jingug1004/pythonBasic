	<select id="getSumBalance" parameterType="hashmap" resultType="com.hanaph.saleon.order.vo.BalanceVO">
		-- 담보/잔고현황(온라인 발주) / getSumBalance / @order_balance.xml / 온라인발주-잔고담보현황
		<![CDATA[
		SELECT
		A.*,
		(SELECT SUM(NVL(balance, 0))
		FROM oragmp.SLRESULTM
		WHERE
		YEARMONTH = TO_CHAR(ADD_MONTHS(SYSDATE, -1), 'YYYY-MM')
		AND
		CUSTCODE = #{cust_id})
		AS BEFORE_AMT --전월 잔고
		,
		(SELECT NVL(SUM(scrtamt), 0)
		FROM oragmp.CMCUSTSCRTD
		WHERE CUSTCODE = #{cust_id}
		AND NVL(returnyn, ' ') <> 'Y'
		AND expdate >= TO_CHAR(SYSDATE, 'YYYY-MM-DD')) AS SALE_DAMBO_AMT --담보가치액 합계 담보확보액
		FROM (
		SELECT
		NVL(SUM(totamt), 0)       AS SALE_AMT,
		--당월매출액 금월판매
		NVL(SUM(balance), 0)      AS CUR_AMT,
		--현잔고
		NVL(SUM(PENDBILLCOLJ), 0) AS JASU_AMT,
		--자수
		NVL(SUM(PENDBILLCOLT), 0) AS TASU_AMT --타수
		FROM ORAGMP.SLRESULTM A
		WHERE custcode = #{cust_id}
		AND A.yearmonth = SUBSTR(SYSDATE, 0, 7)
		) A
		]]>
	</select>

