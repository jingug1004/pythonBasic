	<select id="getBalanceGridList" parameterType="hashmap" resultType="com.hanaph.saleon.order.vo.BalanceVO">
		-- 담보/잔고현황(온라인 발주) / getBalanceGridList / @order_balance.xml / 온라인 발주 - 담보/잔고현황
		<if test="page != null">
			SELECT *
				FROM (SELECT T0.*, FLOOR((ROWNUM - 1) / #{perPageRow,jdbcType=INTEGER} + 1) PAGE
	        		FROM (
	    </if>

	        SELECT A.CUSTCODE                                 AS CUST_ID           -- 거래처 코드
	             , A.SEQ                                      AS INPUT_SEQ         -- 입력순번(입력일자 14자리)
	             , A.SCRTAMT                                  AS SALE_DAMBO_AMT    -- 매출담보금액, 담보가치액
	             , 0                                          AS BUY_DAMBO_AMT     -- 매입담보금액
	             , A.EXPDATE                                  AS END_YMD           -- 만기일자
	             , A.FIXDATE                                  AS START_YMD         -- 발행일자
	             , A.GUARANTOR                                AS BALHANG           -- 발행처,발행자
	             , REPLACE(A.OBJECTADDR,'지급처:','')           AS JIGEUB            -- 지급처. 물건지주소
	             , A.BILLNO                                   AS BILL_NO           -- 어음번호
	             , ORAGMP.FNCOMMONNM('COMM','SL04',A.SCRTDIV) AS BILL_GB           -- 담보구분,담보종류
	             , A.REMARK                                   AS BIGO              -- 비고
	             , TO_CHAR(A.INSERTDT, 'YYYYMMDD')            AS INPUT_YMD         -- 입력일자
	             , ''                                         AS CHULGO_YMD         -- 출고일자
	             , ORAGMP.FNCOMMONNM('CUST',A.CUSTCODE,'')    AS CUST_NM           -- 거래처 명 
	          FROM ORAGMP.CMCUSTSCRTD A
	         WHERE A.CUSTCODE = #{cust_id,jdbcType=VARCHAR}

			<!-- 
			SELECT A.CUST_ID CUST_ID
			     , A.INPUT_SEQ INPUT_SEQ
			     , A.SALE_DAMBO_AMT SALE_DAMBO_AMT
			     , A.BUY_DAMBO_AMT BUY_DAMBO_AMT
			     , TO_CHAR(A.END_YMD,'YYYY-MM-DD') END_YMD, TO_CHAR(A.START_YMD,'YYYY-MM-DD') START_YMD
			     , A.BALHANG BALHANG
			     , A.JIGEUB JIGEUB
			     , A.BILL_NO BILL_NO
			     , (SELECT CODE1_NM
			          FROM SALE.SALE0001
			         WHERE CODE_GB = '0022' AND CODE1 = A.BILL_GB) BILL_GB
			     , A.BIGO BIGO
			     , A.INPUT_YMD INPUT_YMD
			     , TO_CHAR(A.CHULGO_YMD,'YYYY-MM-DD') CHULGO_YMD
			     , B.CUST_NM CUST_NM
			  FROM SALE.SALE0404 A, SALE.SALE0003 B
			 WHERE A.CUST_ID = B.CUST_ID AND A.CUST_ID = #{cust_id}
			-->
			<if test="sidx !=''">
				ORDER BY ${sidx} ${sord}
			</if>
			
		<if test="page != null">
			) T0
		)
		WHERE PAGE = #{page,jdbcType=INTEGER}
		</if>
	  
	 
	</select>

