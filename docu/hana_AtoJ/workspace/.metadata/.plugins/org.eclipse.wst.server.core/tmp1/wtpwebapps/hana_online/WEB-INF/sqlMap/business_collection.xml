	<select id="getCollectionGridTotalCount" parameterType="hashmap" resultType="com.hanaph.saleon.business.vo.CollectionVO">
	<![CDATA[
		SELECT COUNT(*) TOTAL_CNT, SUM(NVL( A.COLAMT, 0)) TOTAL_SUKUM
		  FROM ORAGMP.SLCOLM A
		 WHERE A.COLDATE BETWEEN #{ad_fr_date} AND #{ad_to_date}
		]]>		 
		<if test="as_fr_cust != ''">
		   AND A.CUSTCODE = #{as_fr_cust,jdbcType=VARCHAR}
		</if>
		<![CDATA[
		   AND A.EMPCODE IN(
		                    SELECT EMPCODE
		                      FROM ORAGMP.CMEMPM
		                     WHERE OUTYN = 'N'
							   AND DEPTCODE IN( 
					                            SELECT DEPTCODE
					                              FROM ORAGMP.CMDEPTM 
					                             WHERE USEYN = 'Y'
					                               AND #{as_assgnCode} in ('27010','27018','27023','27025','27026')
					                           CONNECT BY PRIOR DEPTCODE = PREDEPTCODE 
					                             START WITH PREDEPTCODE = (SELECT B.PREDEPTCODE 
					                                                         FROM ORAGMP.CMEMPM A 
					                                                            , ORAGMP.CMDEPTM B
					                                                        WHERE A.EMPCODE = #{as_emp_cd}
					                                                          AND A.DEPTCODE = B.DEPTCODE                        
					                                                      )
					                                                      
					                           UNION ALL
					                            SELECT DEPTCODE 
					                              FROM ORAGMP.CMEMPM
					                             WHERE DEPTCODE = #{as_dept_cd}
					                               AND #{as_assgnCode} in ('27027','27030','27035') 
				                         	)
                            UNION ALL
                            SELECT #{as_emp_cd}
                              FROM DUAL
                             WHERE #{as_assgnCode} IN ('27040','27050') 
		                   )
				
		]]>		 
	</select>

