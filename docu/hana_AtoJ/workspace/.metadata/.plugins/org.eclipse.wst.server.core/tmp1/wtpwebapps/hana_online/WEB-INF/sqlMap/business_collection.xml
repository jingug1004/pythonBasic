	<select id="getCollectionGridList" parameterType="hashmap" resultType="com.hanaph.saleon.business.vo.CollectionVO">
	
		<if test="page != null">
			SELECT *
				FROM (SELECT T0.*, FLOOR((ROWNUM - 1) / #{perPageRow,jdbcType=INTEGER} + 1) PAGE
	        		FROM (
    	</if>
		<![CDATA[
		
		SELECT A.COLDATE as ymd --수금일자
		     , A.CUSTCODE as cust_id--영업소
		     , oragmp.fncommonnm('cust',a.CUSTCODE,'') AS CUST_NM
		     , A.ECUSTCODE  AS RCUST_ID--간납영업소
		     , oragmp.fncommonnm('cust',a.ECUSTCODE,'') AS RCUST_NM
		     , oragmp.fncommonnm('comm','SL18',A.COLDIV) AS ITEM_ID   --수금구분
		     , A.COLAMT AS SUKUM --수금액
		     , A.EXPDATE AS END_YMD --만기일자
		     , A.BILLNO AS BILL_NO --어음번호
		     , A.ISSEMPNM AS BALHANG --발행인
		     , A.EMPCODE AS SAWON_ID
		     , ORAGMP.FNCOMMONNM('emp',A.EMPCODE,'') AS SAWON_NM
		  FROM ORAGMP.SLCOLM A
		 WHERE A.COLDATE BETWEEN #{ad_fr_date} AND #{ad_to_date}
		]]>		 
		<if test="as_fr_cust != ''">
		   AND A.CUSTCODE = #{as_fr_cust,jdbcType=VARCHAR}
		</if>
		<![CDATA[
		   AND A.EMPCODE IN(
		                    SELECT EMPCODE
		                      FROM ORAGMP.CMEMPM
		                     WHERE OUTYN = 'N'
							   AND DEPTCODE IN( 
					                            SELECT DEPTCODE
					                              FROM ORAGMP.CMDEPTM 
					                             WHERE USEYN = 'Y'
					                               AND #{as_assgnCode} in ('27010','27018','27023','27025','27026')
					                           CONNECT BY PRIOR DEPTCODE = PREDEPTCODE 
					                             START WITH PREDEPTCODE = (SELECT B.PREDEPTCODE 
					                                                         FROM ORAGMP.CMEMPM A 
					                                                            , ORAGMP.CMDEPTM B
					                                                        WHERE A.EMPCODE = #{as_emp_cd}
					                                                          AND A.DEPTCODE = B.DEPTCODE                        
					                                                      )
					                                                      
					                           UNION ALL
					                            SELECT DEPTCODE 
					                              FROM ORAGMP.CMEMPM
					                             WHERE DEPTCODE = #{as_dept_cd}
					                               AND #{as_assgnCode} in ('27027','27030','27035') 
				                         	)
                           UNION ALL
                           SELECT #{as_emp_cd}
                             FROM DUAL
                            WHERE #{as_assgnCode} IN ('27040','27050') 
		                   )
				
		]]>		 
					<if test="sidx != ''">
						ORDER BY ${sidx} ${sord}
					</if>
		
				<if test="page != null">
					) T0
				)
				WHERE PAGE = #{page,jdbcType=INTEGER}
				</if>
	</select>


