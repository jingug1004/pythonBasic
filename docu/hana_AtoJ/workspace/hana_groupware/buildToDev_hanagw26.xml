<?xml version="1.0" encoding="UTF-8"?>

<project name="hana_groupware 26" default="compile" basedir=".">

  <property name="app.name"      value="hana_groupware"/>
  <property name="app.path"       value="/${app.name}"/>
  <property name="app.version"   value="0.1-dev"/>

  <property name="build.home" value="C:\AtoJ\_DEV"/>
  <property name="src.home" value="${basedir}/src"/>

  <path id="compile.classpath">
    <fileset dir="${basedir}/WebContent/WEB-INF/lib">
      <include name="*.jar"/>
    </fileset>
  </path>


  <target name="clean" description="Delete old build and dist directories">
    <delete dir="${build.home}/hanagw"/>
  </target>
 
  <target name="prepare" depends="clean">
    <mkdir dir="${build.home}/hanagw/WEB-INF"/>
  	<mkdir dir="${build.home}/hanagw/WEB-INF/classes"/>
    <mkdir dir="${build.home}/hanagw/WEB-INF/lib"/>
    
    <copy todir="${build.home}/hanagw/">
       <fileset dir="${basedir}/WebContent/">
         <include name="**/*.jsp"/>
         <include name="**/*.css"/>
         <include name="**/*.html"/>
         <include name="**/*.js"/>
       	<include name="**/*.jpg"/>
         <include name="**/*.gif"/>
       	<include name="**/*.png"/>
       	<include name="**/*.woff2"/>
       	<include name="**/*.woff"/>
       	<include name="**/*.eot"/>
       	<include name="**/*.ttf"/>
         <include name="**/*.swf"/>
         <include name="**/*.xml"/>
         <include name="**/*.tld"/>
       	<include name="**/*.jar"/>
       	<include name="**/*.jrxml"/>
       	<include name="**/*.properties"/>
       </fileset>
     </copy>

   </target>
	
	<target name="compile" depends="prepare" description="Compile Java sources">
		
	    <!-- Compile Java classes as necessary -->
	    <javac srcdir="${src.home}" destdir="${build.home}/hanagw/WEB-INF/classes" encoding ="UTF-8" classpathref="compile.classpath" >
		</javac>
	        

	    <!-- Copy application resources -->
	    <copy todir="${build.home}/hanagw/WEB-INF/classes">
	      <fileset dir="${src.home}" excludes="**/*.java"/>
	    </copy>
	    
	 </target>

    
</project>