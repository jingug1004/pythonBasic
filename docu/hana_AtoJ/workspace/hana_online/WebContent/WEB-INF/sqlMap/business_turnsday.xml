	<select id="getTurnsdayGridList" parameterType="hashmap" resultType="com.hanaph.saleon.business.vo.TurnsdayVO">
	-- 회전일현황 목록 조회 / getTurnsdayGridList / @business_turnsday.xml /
	SELECT
		  A.ORDERDATE                                           AS  YMD
		 , A.ORDERNO                                            AS  DEAL_NO
		 , A.SEQ                                                AS  INPUT_SEQ
		 , C.CUSTCODE                                           AS  CUST_ID
		 , C.CUSTNAME                                           AS  CUST_NM
		 , B.ECUSTCODE                                          AS  RCUST_ID
		 , (SELECT CUSTNAME
			FROM ORAGMP.CMCUSTM WHERE CUSTCODE = B.ECUSTCODE)   AS  RCUST_NM
		 , A.ITEMCODE                                           AS  ITEM_ID
		 , (SELECT ITEMNAME
			FROM ORAGMP.CMITEMM WHERE ITEMCODE = A.ITEMCODE)    AS  ITEM_NM
		  , (SELECT ITEMUNIT
			 FROM ORAGMP.CMITEMM WHERE ITEMCODE = A.ITEMCODE)   AS  STANDARD
		  , A.SALQTY                                            AS  QTY
		  , A.GIVQTY                                            AS  DC_QTY
		  , A.SALPRC                                            AS  BAL_AMT
		  , A.TOTDISCOUNT                                       AS  QTY_YUL -- 할인율
		  , A.TOTAMT1                                           AS  AMT
		  , A.SALPRC1                                           AS  YAK_AMT
		  , A.TOTDISCOUNT                                       AS  AMT_YUL
		  , A.TOTAMT                                            AS  ACT_SALE
		  , '0'                                                  AS  DANGA_CHA
		  , '0'                                                  AS  HAL_AMT
		  , '0'                                                  AS  BOSANG_AMT
		  , '0'                                                  AS  BOSANG_YUL
		  , '0'                                                  AS  C_AMT
		  , '0'                                                  AS  C
		  , '0'                                                  AS  GC_AMT
		  , '0'                                                  AS  GC
		  , '0'                                                  AS  ETC_AMT
		  , '0'                                                  AS  ETC
		  , 'N'                                                 AS  DC_EN_YN -- '할인정리여부(Y:정리, N:미정리)'
		  , 'N'                                                 AS  GC_EN_YN -- '보상정리여부(Y:정리, N:미정리)'
		  ,B.REMARK                                             AS  BIGO
		  ,#{ad_fr_date}                                        AS  DATEF
		  ,#{ad_to_date}                                        AS  DATET
		FROM ORAGMP.SLORDD A, ORAGMP.SLORDM B, ORAGMP.CMCUSTM C
		WHERE A.ORDERNO = B.ORDERNO
		AND B.CUSTCODE = C.CUSTCODE
		AND C.CUSTCODE LIKE (#{as_fr_cust,jdbcType=VARCHAR})||'%'
		AND B.ECUSTCODE LIKE #{as_fr_rcust,jdbcType=VARCHAR}||'%'
		AND A.ORDERDATE BETWEEN 	TO_DATE(#{ad_fr_date},'YYYYMMDD') AND TO_DATE(#{ad_to_date},'YYYYMMDD') + 0.99999
	</select>

