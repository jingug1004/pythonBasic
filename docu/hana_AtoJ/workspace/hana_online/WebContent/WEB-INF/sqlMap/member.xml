	<!-- USE_YN : BlackYN - 아직 사용하지 않음 , STOPDATE : 거래중지였다가 다시 거래 할 수 있음 , SAGODIV 컬럼으로 변경 -->
	<select id="getLogin" parameterType="hashmap" resultType="com.hanaph.saleon.member.vo.LoginUserVO">
    
    <![CDATA[
       SELECT ELTR.ID AS EMP_CODE
		    , CMCU.CUSTNAME AS EMP_NAME
		    , '' AS DEPT_CODE
		    , '1' AS EMP_GB
		    , ELTR.PWD AS PASSWORD
		    --, DECODE(CMCU.BLACKYN, 'N', 'Y', 'N') AS USE_YN
		    --, CASE WHEN NVL(CMCU.STOPDATE,'2999-12-31') < TO_CHAR(SYSDATE,'YYYY-MM-DD') THEN 'N' ELSE 'Y' END AS USE_YN
		    , CASE WHEN NVL(SAGODIV,'Z') = '1' THEN 'Y' ELSE 'N' END AS USE_YN
		 FROM ORAGMP.ELECTRONICSIGN ELTR
		     , ORAGMP.CMCUSTM CMCU
		WHERE ELTR.ID = CMCU.CUSTCODE
		  AND ELTR.ID = #{empCode}
		  AND ELTR.PWD = (SELECT HANACOMM.HANACRYPTPASS(#{password}) FROM dual)
	]]>
   </select>
