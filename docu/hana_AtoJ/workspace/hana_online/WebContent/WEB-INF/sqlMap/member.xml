    <select id="getLoginForEmployee" parameterType="hashmap" resultType="com.hanaph.saleon.member.vo.LoginUserVO">
	   SELECT a.empcode                                   AS EMP_CODE,
	          a.empcode                                   AS SAWON_ID,
	          a.empname									  AS EMP_NAME,
	          a.deptcode                                  AS DEPT_CODE,
	          b.PWD                                       AS PASSWORD,
	          ''                                          AS EMP_GB,
	          a.PARTDIV                                   AS PART_GB,
	          oragmp.fncommonnm('comm','PS01',gradediv)   AS GRADE_NAME,
	          oragmp.fncommonnm('dept',deptcode,'')       AS DEPT_NAME,
	          oragmp.fncommonnm('comm','SL90',partdiv)    AS PART_NAME,
	          a.DEPTCODE                                  AS DEPT_CD,
	          a.CLASSDIV                                  AS ASSGN_CD,
	          oragmp.fncommonnm('comm','PS42',a.CLASSDIV) AS ASSGN_NAME
	   FROM   oragmp.CMEMPM a ,
	          ORAGMP.ELECTRONICSIGN b
	   WHERE  a.empcode = b.EMPCODE
	   AND    a.empcode = #{empCode}
		-- AND    NVL(a.OUTYN,'N')= 'N'
	   AND    NVL(a.RETIREDT,'N') = 'N'
	   AND    b.PWD = (SELECT HANACOMM.HANACRYPTPASS(#{password}) FROM dual)
	</select>
