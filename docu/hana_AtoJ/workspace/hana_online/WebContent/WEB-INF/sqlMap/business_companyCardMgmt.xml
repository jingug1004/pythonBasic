<mapper namespace="companyCardMgmt"> 
	
	<select id="getEmpInfo" parameterType="hashmap" resultType="com.hanaph.saleon.business.vo.CompanyCardMgmtVO">
		SELECT B.EMPCODE ls_sawon_id
		     , B.EMPNAME ls_sawon_nm
		     , B.DEPTCODE ls_dept_cd
		     , A.DEPTNAME ls_dept_nm
		  FROM ORAGMP.CMDEPTM A, ORAGMP.CMEMPM B
		 WHERE A.DEPTCODE = B.DEPTCODE
		   AND B.EMPCODE = #{gs_empCode,jdbcType=VARCHAR}
	</select>
	
	<select id="getAssgnCd" parameterType="hashmap" resultType="java.lang.String">
		SELECT CLASSDIV IS_ASSGN_CD
		  FROM ORAGMP.CMEMPM
