	<!--getCustomerGridList / @business_common.xml / 거래처/간납처 목록-->
	<select id="getCustomerGridList" parameterType="hashmap" resultType="com.hanaph.saleon.business.vo.BusinessVO">
		<if test="page != null">
			--getCustomerGridList / @business_common.xml / 거래처/간납처 목록
			SELECT *
			  FROM (SELECT T0.*, FLOOR((ROWNUM - 1) / #{perPageRow,jdbcType=INTEGER} + 1) PAGE
			          FROM (
		</if>
		<![CDATA[
		                    SELECT C.CUSTCODE AS CUST_ID,
		                           C.CUSTNAME AS CUST_NM,
		                           B.EMPCODE AS SAWON_ID,
		                           B.EMPNAME AS SAWON_NM,
		                           (SELECT REGEXP_REPLACE(C.BUSINESSNO, '[^0-9]+') FROM DUAL) AS VOU_NO,
		                           C.CEONAME AS PRESIDENT,
		                           ORAGMP.FNCOMMONNM('COMM','CM20',C.SAGODIV) AS STATUS
		                      FROM ORAGMP.CMDEPTM A, ORAGMP.CMEMPM B, ORAGMP.CMCUSTM C
		                     WHERE A.DEPTCODE = B.DEPTCODE
		                       AND B.EMPCODE = C.EMPCODE
		                       AND C.CUSTDIV   = '2'
		]]>
		<if test='stop_yn != "" and stop_yn != "N"'>
		                       AND C.SAGODIV NOT IN('2') 
		</if>
		<if test="searchKeyword != ''">
		                       AND C.CUSTCODE || C.CUSTNAME LIKE '%' || #{searchKeyword,jdbcType=VARCHAR} || '%'
		</if>
                         <choose>
		                     <when test="as_assgnCode eq '27020' or as_assgnCode eq '27025'">
		<![CDATA[
		                       AND C.EMPCODE IN (SELECT EMPCODE 
                                                   FROM ORAGMP.CMEMPM
                                                  WHERE PLANTCODE = '1000' 
                                                    AND CLASSDIV <> '27040' 
                                                    AND DEPTCODE IN ( SELECT DEPTCODE 
                                                                        FROM ORAGMP.CMDEPTM 
                                                                     CONNECT BY PRIOR DEPTCODE = PREDEPTCODE
                                                                       START WITH PLANTCODE = '1000'
                                                                         AND DEPTCODE = #{as_deptCode,jdbcType=VARCHAR})) 
		]]>
							 </when>
		                     <when test="as_assgnCode eq '27027' or as_assgnCode eq '27030' or as_assgnCode eq '27035' ">
		                           AND A.DEPTCODE IN ( SELECT DEPTCODE FROM ORAGMP.CMEMPM WHERE EMPCODE = #{as_emp_cd,jdbcType=VARCHAR} )
							 </when>
		                     <when test="as_assgnCode eq '27040' or as_assgnCode eq '27050'">
		                           AND C.EMPCODE  = #{as_emp_cd,jdbcType=VARCHAR}
							 </when>
						 </choose>
		<if test="sidx != ''">
			                 ORDER BY ${sidx} ${sord}
		</if>
		<if test="page != null">
			               ) T0
			       )
			 WHERE PAGE = #{page,jdbcType=INTEGER}
		</if>
	</select>

