		FROM (
		SELECT
		  A.FIXDATE AS REQ_DATE,
		  A.EXPDATE AS PROMISE_DATE,
		  CASE WHEN B.APPRSTATUS = '00' THEN '등록'
		  WHEN B.APPRSTATUS = '01' THEN '상신'
		  WHEN B.APPRSTATUS = '03' THEN '승인'
		  WHEN B.APPRSTATUS = '04' THEN '반려' ELSE '    ' END AS STATUS,
		  A.REMARK AS PROMISE_BIGO,
		  A.RETURNDATE AS RETURN_DESC
		FROM ORAGMP.CMCUSTSCRTD A INNER JOIN ORAGMP.SLORDM B
		ON A.CUSTCODE = B.CUSTCODE
			  WHERE A.CUSTCODE = #{as_cust_id,jdbcType=VARCHAR}
			  AND A.FIXDATE BETWEEN #{adt_fr_date,jdbcType=VARCHAR} AND #{adt_to_date,jdbcType=VARCHAR}
			  AND A.EXPDATE IS NOT NULL
