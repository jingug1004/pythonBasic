<?xml version="1.0" encoding="EUC-KR"?> 
<service name="rsm4041" initial="SetResultKeys">
    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  	    <property name="staticResultKeyFile"  value="resultkey.properties" />	    <property name="resultKeyList" 		  value="dsRaceInfo|dsTotal" />	    <transition name="success" 			  value="EventRouter" />	</activity>  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">
    	<transition name="searchRaceInfo"	value="searchRaceInfo" />	<!-- 경주일 정보 -->
    	<transition name="searchTotal"		value="searchTotal" />	<!-- 일일 발매실적 밸런스 조회 -->		<transition name="success" 			  value="end" />	</activity>
	
	<!-- 경주일 정보 -->
	<activity name="searchRaceInfo" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
	  <transition name="success" 		  value="searchTotal" />
	  <property name="resultkey" 		  value="dsRaceInfo" />
	  <property name="sqlkey" 		  value="rsm4041_s01" />
	  <property name="param-count" 	  value="2" />
	  <property name="param0" 		  value="RACE_DAY" />	<!-- 경륜 구분 코드 -->
	  <property name="param1" 		  value="RACE_DAY" />	<!-- 경주일 -->	  
	  <property name="dao" 			  value="rbmdao" />
	</activity>
	
	<!-- 일일 발매실적 밸런스 조회 -->
	<activity name="searchTotal" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
	  <transition name="success" 		  value="end" />
	  <property name="resultkey" 		  value="dsTotal" />
	  <property name="sqlkey" 		  value="rsm4041_s02" />
	  <property name="param-count" 	  value="1" />
	  <property name="param0" 		  value="RACE_DAY" />	<!-- 경주일 -->
	  <property name="dao" 			  value="rbmdao" />
	</activity>
	
  <transaction-manager id="tx_rbm" commit="true" /></service>

