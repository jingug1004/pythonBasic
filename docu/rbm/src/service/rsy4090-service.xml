<?xml version="1.0" encoding="EUC-KR"?>
<service name="rsy4090" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsRaceTimeInfo|dsRaceInfo" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchRaceInfo"   	value="searchRaceInfo" />
    <transition name="searchRaceTimeInfo"   value="searchRaceTimeInfo" />
    <transition name="success"              value="end" />
  </activity>


  <!-- 경주 기본 정보 -->
  <activity name="searchRaceInfo" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
	<transition name="success" 		  value="end" />
	<property name="resultkey" 		  value="dsRaceInfo" />
	<property name="sqlkey" 		  value="rsm2010_s01" />
	<property name="param-count" 	  value="1" />
	<property name="param0" 		  value="RACE_DAY" />	<!-- 경주일 yyyymmdd  -->
	<property name="dao" 			  value="rbmdao" />
  </activity>
	
	
  <!-- 경주시간정보 조회 -->
  <activity name="searchRaceTimeInfo"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsRaceTimeInfo" />
    <property name="sqlkey"                 value="rsy4090_s01" />
    <property name="param-count"            value="0" />
    <property name="dao"                    value="rbmdao" />
  </activity>  

  <transaction-manager id="tx_rbm" commit="true" />
</service>