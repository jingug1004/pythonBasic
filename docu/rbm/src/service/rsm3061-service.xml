<?xml version="1.0" encoding="EUC-KR"?>

<service name="rsm3061" initial="SetResultKeys">
    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
	    <property name="staticResultKeyFile"  value="resultkey.properties" />
	    <property name="resultKeyList" 		  value="dsTMS|dsRaceYoil" />
	    <transition name="success" 			  value="EventRouter" />
	</activity>
  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">
    	<transition name="searchTMS01"         value="searchTMS01" />	<!-- 회차별 매출건수 -->
    	<transition name="searchYoil01"         value="searchYoil01" />	<!-- 요일 조회 -->
		<transition name="success" 			  value="end" />
	</activity>

	<!-- 회차별 매출건수 -->
	<activity name="searchTMS01" 	  class="snis.rbm.business.rsm3061.activity.SearchTMS">
	  <transition name="success" 		  value="searchYoil01" />
	  <property name="dao" 			  value="rbmdao" />
	</activity>
	
	<!-- 요일 조회 -->
	<activity name="searchYoil01" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
	  <transition name="success" 		  value="end" />
	  <property name="resultkey" 		  value="dsRaceYoil" />
	  <property name="sqlkey" 		  value="rsm3061_s02" />
	  <property name="param-count" 	  value="3" />
	  <property name="param0" 		  value="MEET_CD" />		<!-- 개최지 코드 -->
	  <property name="param1" 		  value="RACE_DAY_ST" />	<!-- 경주 검색 시작 일 -->
	  <property name="param2" 		  value="RACE_DAY_END" />	<!-- 경주 검색 마지막 일 -->
	  <property name="dao" 			  value="rbmdao" />
	</activity>
	
	
	
  <transaction-manager id="tx_rbm" commit="true" />

</service>



