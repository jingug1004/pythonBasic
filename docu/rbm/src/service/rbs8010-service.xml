<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs8010" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsAskInfo|dsRstMasterInfo|dsRstMaster|dsUploadFile" />
    <transition name="success"              value="EventRouter" />
  </activity>  

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchAskInfo"      	value="searchAskInfo" />  		<!-- 휴양소 신청내역  조회  -->
    <transition name="searchRstMaster"      value="searchRstMaster" />   	<!-- 휴양소별 전체 정보  조회 -->
    <transition name="searchRstList"      	value="searchRstList" />   		<!-- 휴양소 기간별  정보  조회 -->
    <transition name="saveRstMaster"  		value="saveRstMaster" /> 		<!-- 휴양소 정보 저장 -->
    <transition name="success"              value="end" />
  </activity>

  <!-- 휴양소 신청내역  조회 -->
  <activity name="searchAskInfo"       		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsAskInfo" />
    <property name="sqlkey"                 value="rbs8010_s01" />    
    <property name="param-count"            value="0" />        
    <property name="dao"                    value="rbmdao" />    
  </activity>
    
  <!-- 휴양소별 전체 정보  조회  --> 
  <activity name="searchRstMaster"       	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="searchRstList" />
    <property name="resultkey"              value="dsRstMasterInfo" />
    <property name="sqlkey"                 value="rbs8010_s02" />    
    <property name="param-count"            value="2" />        
    <property name="param0" 				value="RSV_YEAR" /> 
    <property name="param1" 				value="RSV_TMS" /> 
    <property name="dao"                    value="rbmdao" />    
  </activity>
  
  <!-- 휴양소 기간별  정보  조회 --> 
  <activity name="searchRstList"       		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsRstMaster" />
    <property name="sqlkey"                 value="rbs8010_s03" />    
    <property name="param-count"            value="2" />        
    <property name="param0" 				value="RSV_YEAR" /> 
    <property name="param1" 				value="RSV_TMS" /> 
    <property name="dao"                    value="rbmdao" />    
  </activity>
  
  <!-- 휴양소 정보 저장  --> 
  <activity name="saveRstMaster"            class="snis.rbm.business.rbs8010.activity.SaveRstMaster">
    <transition name="success"              value="searchAskInfo" />
  </activity>    

  <transaction-manager id="tx_rbm" commit="true" />
</service>
