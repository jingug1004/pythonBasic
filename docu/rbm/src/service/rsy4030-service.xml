<?xml version="1.0" encoding="EUC-KR"?>

<service name="rsy4030" initial="SetResultKeys">

  <activity name="SetResultKeys" 			class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  

    <property name="staticResultKeyFile" 	value="resultkey.properties" />

    <property name="resultKeyList" 			value="dsLineMana" />

    <transition name="success" 				value="EventRouter" />

  </activity>

  

  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">

    <transition name="searchLineMana"  		value="searchLineMana" />

    <transition name="saveLineMana"   		value="saveLineMana" />    

    <transition name="success" 				value="end" />

  </activity>


  

  <!--  회선  조회 -->
  
  <activity name="searchLineMana" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success" 				value="end" />

    <property name="resultkey" 				value="dsLineMana" />

    <property name="sqlkey"					value="rsy4030_s01" />

    <property name="param-count" 			value="2" />

    <property name="param0" 				value="LINE_COMP" />
    
    <property name="param1" 				value="PROD_NM" />

    <property name="dao" 					value="rbmdao" />

  </activity>  
  

  <!-- 회선  저장 -->

  <activity name="saveLineMana" 			class="snis.rbm.system.rsy4030.activity.SaveLineMana">
    <transition name="success" 				value="end" />
  </activity>



  <transaction-manager id="tx_rbm" commit="true" />

</service>



