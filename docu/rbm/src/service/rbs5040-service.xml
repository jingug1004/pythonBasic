<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs5040" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsRwrdRule" />
    <transition name="success"              value="EventRouter" />
  </activity>  

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchRwrdRule"  	value="searchRwrdRule" />   		<!-- 포상금 지급기준  조회 -->
    <transition name="saveRwrdRule"  	value="saveRwrdRule" /> 			<!-- 포상금 지급기준  저장  -->
    <transition name="success"              value="end" />
  </activity>

  <!-- 포상금 지급기준 조회 -->
  <activity name="searchRwrdRule"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsRwrdRule" />
    <property name="sqlkey"                 value="rbs5040_s01" />    
    <property name="param-count"            value="1" />        
    <property name="param0"                 value="GAME_CD" />					<!-- 종목코드 -->
    <property name="dao"                    value="rbmdao" />    	
  </activity>
  
  
  <!-- 포상금 지급기준  저장  --> 
  <activity name="saveRwrdRule"          class="snis.rbm.business.rbs5040.activity.SaveRwrdRule">
    <transition name="success"              value="searchRwrdRule" />
  </activity>    

  <transaction-manager id="tx_rbm" commit="true" />
</service>
