<?xml version="1.0" encoding="EUC-KR"?>

<service name="rsm5060" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsPoGita|dsPoGitaGrp" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"                class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPcGita"           value="searchPcGita" />    <!-- 기타소득세 검증 조회(상세) -->
    <transition name="searchPcGitaGrp"        value="searchPcGitaGrp" /> <!-- 기타소득세 검증 조회(그룹) -->
  </activity>
  
  <!-- 기타소득세 확정 조회(그룹) -->
  <activity name="searchPcGitaGrp"    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"        value="end" />   
    <property name="resultkey"        value="dsPoGitaGrp" />
    <property name="sqlkey"           value="rsm5070_s02" />
 
    <property name="param-count"      value="4" />    
    <property name="param0"           value="PAY_YEAR" />
    <property name="param1"           value="PAY_MM" />  
    <property name="param2"           value="MEET_CD" />
    <property name="param3"           value="SELL_CD" />

    <property name="dao"              value="rbmdao" />
  </activity>  
  
  <!-- 기타소득세 확정 조회(상세) -->
  <activity name="searchPcGita"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"        value="end" />   
    <property name="resultkey"        value="dsPoGita" />
    <property name="sqlkey"           value="rsm5070_s01" />
 
    <property name="param-count"      value="5" />
    
    <property name="param0"           value="PAY_YEAR" />
    <property name="param1"           value="PAY_MM" />  
    <property name="param2"           value="MEET_CD" />
    <property name="param3"           value="SELL_CD" />
    <property name="param4"           value="COMM_NO" />

    <property name="dao"              value="rbmdao" />
  </activity>

  <transaction-manager id="tx_rbm" commit="true" />
</service>