function fcSearch(obj) {    
  
}

/*-------------------------------------------------------------------------------------------------+
>>  부서 목록 조회 처리
+-------------------------------------------------------------------------------------------------*/
function fcGetDeptTree() {

	var sServiceName = "rbs1040-service:searchDept";           // 서버에 요청할 Sevice 명
	var sInDataSet   = "";                                  // Input DataSet 명칭
	var sOutDataSet  = "dsOutDept=dsDept";                 // Output DataSet 명칭

	fcd_SendTransaction(sServiceName, sInDataSet, sOutDataSet, "fcbGetDeptTree", false);
}
/***************************************************************************************************
*                                      사용자 정의  처리 부분                                      *
***************************************************************************************************/
/*-------------------------------------------------------------------------------------------------+
>>  01. Transaction 후 처리 해야 할 내용!
>>>>  1)  param svcId - 서비스 ID
>>>>  2)  param errCd - 에러 코드
>>>>  3)  param errMsg - 에러 메시지
+-------------------------------------------------------------------------------------------------*/
function fcbGetDeptTree(sServiceName, ErrorCode, ErrorMSG) {
	if ( !fnc_result(ErrorCode, ErrorMSG) ) return;
	
	trvDept.ExpandItem(0);

}

/*-------------------------------------------------------------------------------------------------+
>>  트리 더블클릭 시 선택
+-------------------------------------------------------------------------------------------------*/
function fcTrvDeptOnDblClick(obj,nRow) {
    fcChoice(obj);
}

/*-------------------------------------------------------------------------------------------------+
>>  해당 부서코드 선택
+-------------------------------------------------------------------------------------------------*/
function fcChoice(obj) {
	
	
	var arrReturn    = array(6);               //결과 반환 할 Array

	if (dsOutDept.row < 0) return;
	if( dsOutDept.GetColumn(dsOutDept.row,"LEVL") == 0) return;
	
	arrReturn[0] = dsOutDept.GetColumn(dsOutDept.currow, "DEPT_CD");   	//부서코드 반환
	arrReturn[1] = dsOutDept.GetColumn(dsOutDept.currow, "GROUP_NM");   //부서명 반환		
		
    Close(arrReturn); 
}

function fcClose(obj) {
	close();
}

function fcGrdOnKeyDown(obj,nChar,bShift,bCtrl,bAlt,nLLParam,nHLParam)
{

	// 엔터키 입력 시 배열에 해당 값을 반환 하고 종료
	if (nChar==13) fcChoice();
}
