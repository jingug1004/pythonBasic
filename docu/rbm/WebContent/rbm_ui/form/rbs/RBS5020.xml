+-------------------------------------------------------------------------------------------------*/
function fcDelRow(obj) {

	if (obj.GetForm().id == "specBtnRow") {

		var dCnt = 0;
		for(var i = 0; i < dsContestType.GetRowCount(); i++) {
			if(dsContestType.GetColumn(i, "chk") == 1) dCnt ++;
		}
		if(fnc_Message(SNIS_COM_1010, "Y", dCnt) == 0) return false;	
		
		for(var i = dsContestType.GetRowCount() -1; i >= 0 ; i--) {
			if(dsContestType.GetColumn(i, "chk") == 1) dsContestType.deleterow(i);
		}
	}
}


