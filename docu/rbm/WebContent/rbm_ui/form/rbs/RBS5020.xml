+-------------------------------------------------------------------------------------------------*/
function fcSaveCheck(obj) {
	
	// 변경된 자료가 있는지 체크
	if ( !fnc_DatasetChangeCheck(dsContestType) &&  !fnc_DatasetChangeCheck(dsRacerCntr) ) {
		// 저장 할 자료가 없음
		fnc_Message(SNIS_COM_1006, "N");
		return false;
	}

	// 필수항목체크
	oDataSet          = dsContestType;
	sMandatoryColID   = "EMP_NO|GAME_CD|RACER_TYPE";
	sMandatoryColName = "사번|종목|선수구분";
	oGrid             = grdRacerList;
	if ( fnc_GetMandatoryViolateRow(oDataSet, sMandatoryColID, sMandatoryColName, oGrid) > -1 ) {

		// 필수항목체크
		oDataSet          = dsContestType;
		sMandatoryColID   = "EMP_NO|GAME_CD|RACER_TYPE";
		sMandatoryColName = "사번|종목|선수구분";
		oGrid             = grdRacerList;
		if ( fnc_GetMandatoryViolateRow(oDataSet, sMandatoryColID, sMandatoryColName, oGrid) > -1 ) {
			return false;
		}
	}

	return true;
}


