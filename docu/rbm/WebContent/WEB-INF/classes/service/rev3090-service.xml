<?xml version="1.0" encoding="EUC-KR"?>

<service name="rev3090" initial="SetResultKeys">

  <activity name="SetResultKeys" 			class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" 	value="resultkey.properties" />   
    <property name="resultKeyList" 			value="dsEvEmp|dsEvEmpRbm" />
    <transition name="success" 				value="EventRouter" />
  </activity>

  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchEvEmpPwd"  		value="searchEvEmpPwd" />	<!-- 개인별세부평가결과  조회 -->
    <transition name="searchEvEmpPwdRbm"  	value="searchEvEmpPwdRbm" />	<!-- 개인별세부평가결과  조회 -->
    <transition name="updatePwd"  		    value="updatePwd" />		<!-- 비밀번호 초기화 -->
    <transition name="updatePwdRbm"  		value="updatePwdRbm" />		<!-- 비밀번호 초기화 -->
  </activity>
 
  <!-- 다면평가 비밀번호 변경자 조회 -->
   <activity name="searchEvEmpPwd" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 			value="end" />
    <property name="resultkey" 			value="dsEvEmp" />
    <property name="sqlkey"				value="rev3090_s01" />
    <property name="param-count" 		value="6" />
    <property name="param0"             value="ESTM_YEAR" />   <!-- 평가년도 -->
    <property name="param1"             value="ESTM_NUM" />    <!-- 평가차수 -->
    <property name="param2"			    value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param3"             value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param4"             value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param5"			    value="EMP_NM" />      <!-- 사원명    -->
    <property name="dao" 				value="rbmdao" />
  </activity>

  <!-- 경주사업관리 등록자 조회 -->
   <activity name="searchEvEmpPwdRbm"   class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 			value="end" />
    <property name="resultkey" 			value="dsEvEmpRbm" />
    <property name="sqlkey"				value="rev3090_s02" />
    <property name="param-count" 		value="6" />
    <property name="param0"             value="ESTM_YEAR" />   <!-- 평가년도 -->
    <property name="param1"             value="ESTM_NUM" />    <!-- 평가차수 -->
    <property name="param2"			    value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param3"             value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param4"             value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param5"			    value="EMP_NM" />      <!-- 사원명    -->
    <property name="dao" 				value="rbmdao" />
  </activity>

  <!-- 비밀번호초기화 -->
  <activity name="updatePwd"		    class="snis.rbm.business.rev3090.activity.UpdatePwd">
    <transition name="success" 			value="end" />
  </activity>	

  <!-- 비밀번호초기화 -->
  <activity name="updatePwdRbm"		    class="snis.rbm.business.rev3090.activity.UpdatePwdRbm">
    <transition name="success" 			value="end" />
  </activity>	

  <transaction-manager id="tx_rbm" commit="true" />
</service>