<?xml version="1.0" encoding="EUC-KR"?> 
<service name="rsm1080" initial="SetResultKeys">
    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  	    <property name="staticResultKeyFile"  value="resultkey.properties" />	    <property name="resultKeyList" 		  value="dsTms|dsDayOrd|dsVeriSDLDTPT|dsVeriSaltit|dsSDLDTSUM|dsRaceDayInfo|dsVeriMyCat" />	    <transition name="success" 			  value="EventRouter" />	</activity>  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">
    	<transition name="searchTms"  			value="searchTms" />		<!--  년도별 최근 회차  -->
    	<transition name="searchDayOrd"  		value="searchDayOrd" />			<!-- 년도별 최근 회차별 최근 일차 -->
    	<transition name="searchVeriFstSDLDTPT"		value="searchVeriFstSDLDTPT" />	<!-- SDLPT PAYOFF 검증결과 -->
    	<transition name="searchVeriFstSDLPTPayoff"	value="searchVeriFstSDLPTPayoff" />	<!-- SDLPT PAYOFF 검증결과 -->
    	<transition name="searchSDLDTSUM"			value="searchSDLDTSUM" />			<!-- SDL_DT와 SDL_DT_SUM 합계 비교 -->
    	<transition name="searchRaceDayInfo"		value="searchRaceDayInfo" />	<!-- 경주일 정보 -->	    	<transition name="searchVeriMyCatSatlit"		value="searchVeriMyCatSatlit" />	<!-- MycatSatlit -->
		<transition name="success" 		  value="end" />	</activity> 	
 	
 	<!--  년도별 최근 회차  -->
	<activity name="searchTms" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">	
	  <transition name="success" 			value="end" />
	  <property name="resultkey" 			value="dsTms" />
	  <property name="sqlkey" 				value="rsm1080_s04" />
	  <property name="param-count" 			value="2" />
	  <property name="param0" 				value="MEET_CD" />	<!-- 경륜, 경정 구분 코드  -->
	  <property name="param1" 				value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="dao" 					value="rbmdao" />
	</activity>
	
	<!-- 년도별 최근 회차별 최근 일차 -->
	<activity name="searchDayOrd" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">	
	  <transition name="success" 			value="end" />
	  <property name="resultkey" 			value="dsDayOrd" />
	  <property name="sqlkey" 				value="rsm1080_s05" />
	  <property name="param-count" 			value="3" />
	  <property name="param0" 				value="MEET_CD" />	<!-- 경륜, 경정 구분 코드  -->
	  <property name="param1" 				value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param2" 				value="TMS" />			<!-- 회차 -->
	  <property name="dao" 					value="rbmdao" />    
	
	</activity>
 	
	<!-- SDLPT SDLDT 검증결과 -->	
	<activity name="searchVeriFstSDLDTPT" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">	
	  <transition name="success" 				value="searchVeriMyCat" />
	  <property name="resultkey" 				value="dsVeriSDLDTPT" />
	  <property name="sqlkey" 				value="rsm1080_s01" />
	  <property name="param-count" 			value="8" />
	  <property name="param0" 				value="MEET_CD" />		<!-- 개최지 -->
	  <property name="param1" 				value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param2" 				value="TMS" />			<!-- 회차 -->
	  <property name="param3" 				value="DAY_ORD" />		<!-- 일차 -->		
	  
	  <property name="param4" 				value="MEET_CD" />		<!-- 개최지 -->
	  <property name="param5" 				value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param6" 				value="TMS" />			<!-- 회차 -->
	  <property name="param7" 				value="DAY_ORD" />		<!-- 일차 -->
	  
	  <property name="dao" 					value="rbmdao" />    
	
	</activity>
	
	<!-- SDLPT PAYOFF 검증결과 -->	
	<activity name="searchVeriSatlit" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">	
	  <transition name="success" 				value="end" />
	  <property name="resultkey" 				value="dsVeriSaltit" />
	  <property name="sqlkey" 				value="rsm1080_s02" />
	  <property name="param-count" 			value="1" />
	  <property name="param0" 				value="RACE_DAY" />		<!-- 경주일자  -->
	  <property name="dao" 					value="rbmdao" />    
	</activity>
	
	<!-- MYCAT(DB) 조회결과 -->	
	<activity name="searchVeriMyCat" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">	
	  <transition name="success" 				value="searchVeriSatlit" />
	  <property name="resultkey" 				value="dsVeriMyCat" />
	  <property name="sqlkey" 				value="rsm1080_s06" />
	  <property name="param-count" 			value="1" />
	  <property name="param0" 				value="RACE_DAY" />		<!-- 경주일자 -->
	  <property name="dao" 					value="rbmdao" />    
	
	</activity>
	
	
	
	
	
	
	<!-- 경주일 정보 -->	
	<activity name="searchRaceDayInfo" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">	
	  <transition name="success" 				value="end" />
	  <property name="resultkey" 				value="dsRaceDayInfo" />
	  <property name="sqlkey" 				value="rsm1080_s03" />
	  <property name="param-count" 			value="6" />
	  
	  <property name="param0" 				value="MEET_CD" />		<!-- 경륜 경정 구분 코드 -->
	  <property name="param1" 				value="MEET_CD" />		<!-- 경륜 경정 구분 코드 -->
	  <property name="param2" 				value="MEET_CD" />		<!-- 경륜 경정 구분 코드 -->
	  
	  <property name="param3" 				value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param4" 				value="TMS" />			<!-- 회차 -->
	  <property name="param5" 				value="DAY_ORD" />		<!-- 일차 -->
	  
	  
	  <property name="dao" 					value="rbmdao" />    
	
	</activity>
	
	
		
	<transaction-manager id="tx_rbm" commit="true" />
  	
  </service>

