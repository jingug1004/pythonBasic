<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs5130" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsRwrdHis" />
    <transition name="success"              value="EventRouter" />
  </activity>  

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchRwrdHis"  		value="searchRwrdHis" />   			<!-- 포상지급  조회 -->
    <transition name="saveRwrdHis"  		value="saveRwrdHis" /> 				<!-- 포상지급  저장  -->
    <transition name="success"              value="end" />
  </activity>

  <!-- 포상지급 조회 -->
  <activity name="searchRwrdHis"       		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsRwrdHis" />
    <property name="sqlkey"                 value="rbs5130_s01" />    
    <property name="param-count"            value="4" />        
    <property name="param0"                 value="GAME_CD" />					<!-- 종목코드 -->
    <property name="param1"                 value="STR_DY" />					<!-- 종목코드 -->
    <property name="param2"                 value="END_DY" />					<!-- 종목코드 -->
    <property name="param3"                 value="RACER_ID" />					<!-- 종목코드 -->
    <property name="dao"                    value="rbmdao" />    	
  </activity>
  
  
  <!-- 포상지급  저장  --> 
  <activity name="saveRwrdHis"        		class="snis.rbm.business.rbs5130.activity.SaveRwrdHis">
    <transition name="success"              value="searchRwrdHis" />
  </activity>    

  <transaction-manager id="tx_rbm" commit="true" />
</service>
