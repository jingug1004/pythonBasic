<?xml version="1.0" encoding="EUC-KR"?>

<service name="rem5070" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsYearItem|dsYearItemPop" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchYearItem"  		value="searchYearItem" />         		<!--  기간별 지점별 단가계약물품 조회 -->
    <transition name="searchYearItemPop"  	value="searchYearItemPop" />         	<!--  기간별 지점별 단가계약물품 조회 -->
    <transition name="searchCurYearItemPop" value="searchCurYearItemPop" />         <!--  현재고가 있는 단가계약물품 조회 -->
    <transition name="saveYearItem"  		value="saveYearItem" />         		<!--  기간별 지점별 단가계약물품 조회 -->
    <transition name="success"              value="end" />
  </activity>


  <!--  지점별 단가계약물품 조회 -->  
  <activity name="searchYearItem"       	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsYearItem" />
    <property name="sqlkey"                 value="rem5070_s01" />    
    <property name="param-count"            value="3" />    
    <property name="param0"                 value="BRNC_CD" />      <!--  지점 -->
    <property name="param1"                 value="STR_DT" />      <!--  시작일 -->
    <property name="param2"                 value="END_DT" />      <!--  종료일 -->
    <property name="dao"                    value="rbmdao" />
  </activity>  
  
  <!--  지점별 단가계약물품 조회(팝업) -->  
  <activity name="searchYearItemPop"       	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsYearItemPop" />
    <property name="sqlkey"                 value="rem5070_s02" />    
    <property name="param-count"            value="4" />    
    <property name="param0"                 value="CUR_DT" />      <!--  조회일 -->
    <property name="param1"                 value="BRNC_CD" />      <!-- 지점 -->
    <property name="param2"                 value="CUR_DT" />      <!--  조회일 -->
    <property name="param3"                 value="GOOD_TYPE_CD" />      <!--  조회일 -->
    <property name="dao"                    value="rbmdao" />
  </activity>  
  
  
  <!--  지점별 단가계약물품 조회(팝업) -->  
  <activity name="searchCurYearItemPop"       	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsYearItemPop" />
    <property name="sqlkey"                 value="rem5070_s04" />    
    <property name="param-count"            value="6" />    
    <property name="param0"                 value="CUR_DT" />      <!--  조회일 -->
    <property name="param1"                 value="BRNC_CD" />      <!-- 지점 -->
    <property name="param2"                 value="ALL_YN" />       <!-- 전체여부 -->
    <property name="param3"                 value="BRNC_CD" />      <!-- 지점 -->
    <property name="param4"                 value="CUR_DT" />      <!--  조회일 -->
    <property name="param5"                 value="GOOD_TYPE_CD" />      <!--  조회일 -->
    <property name="dao"                    value="rbmdao" />
  </activity>  
  
  
  <!-- 지점별 단가계약물품 저장 -->
  <activity name="saveYearItem"      class="snis.rbm.business.rem5070.activity.SaveYearItem">
    <transition name="success"          value="searchYearItem" />
  </activity>
  
  <transaction-manager id="tx_rbm" commit="true" />

</service>



