<?xml version="1.0" encoding="EUC-KR"?>

<service name="rsy7020" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsAlarm" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"         class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchAlarm"      value="searchAlarm" />      <!-- 알림담당자 조회 -->
    <transition name="saveAlarm"        value="saveAlarm" />        <!-- 알림담당자 저장 -->
  </activity>
  
  <!-- 알림담당자 조회 -->
  <activity name="searchAlarm"      class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"          value="end" />

    <property name="resultkey"          value="dsAlarm" />
    <property name="sqlkey"             value="rsy7020_s01" />

    <property name="param-count"        value="4" />
    <property name="param0"             value="ALARM_CD" />
    <property name="param1"             value="ALARM_GBN" />
    <property name="param2"             value="USER_NM" />
    <property name="param3"             value="TEAM_CD" />
    
    <property name="dao"                value="rbmdao" />
  </activity>  
 
 
  <!-- 알림담당자 저장 -->
  <activity name="saveAlarm"            class="snis.rbm.system.rsy7020.activity.SaveAlarm">
    <transition name="success"              value="end" />
  </activity>
  
  
  <transaction-manager id="tx_rbm" commit="true" />
</service>