<?xml version="1.0" encoding="EUC-KR"?> 
<service name="rev1030" initial="SetResultKeys">
    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  	    <property name="staticResultKeyFile"  value="resultkey.properties" />	    <property name="resultKeyList" 		  value="dsYearNum|dsEVDistr" />	    <transition name="success" 			  value="EventRouter" />	</activity>  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">	    <transition name="searchYearNum"     value="searchYearNum" />	
	    <transition name="searchEVDistr"     value="searchEVDistr" />		
	    <transition name="saveEVDistr"       value="saveEVDistr" />	
	    <transition name="createEVDistr"     value="createEVDistr" />			<transition name="success" 			 value="end" />	</activity> 	
	
    <!-- 년도-회차  콤보조회 -->
    <activity name="searchYearNum"   class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    	<transition name="success"    value="end" />
        <property name="resultkey"    value="dsYearNum" />
        <property name="sqlkey"       value="rev1030_s1" />
		<property name="param-count"  value="0" />		
        <property name="dao"          value="rbmdao" />    
	</activity>
  
  <!-- 그리드 조회 -->  <activity name="searchEVDistr" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 		  value="end" />
    <property name="resultkey" 		  value="dsEVDistr" />
    <property name="sqlkey" 		  value="rev1030_s2" />
    <property name="param-count" 	  value="1" />
    <property name="param0" 		  value="YEAR_NUM" />    
    <property name="dao" 			  value="rbmdao" />
  </activity>	
	
	<!-- 평가배분표 저장 -->
  	<activity name="saveEVDistr" 		class="snis.rbm.business.rev1030.activity.SaveEVDistr">
    	<transition name="success" 			value="end" />
  	</activity>
  	
  	
  	<!-- 평가배분표 생성 -->
  	<activity name="createEVDistr" 		class="snis.rbm.business.rev1030.activity.CreateEVDistr">
    	<transition name="success" 			value="end" />
  	</activity>
  
  <transaction-manager id="tx_rbm" commit="true" /></service>

