<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs5210" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsPayAdj|dsPayAdjScrList" />
    <transition name="success"              value="EventRouter" />
  </activity>  

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPayAdj"  		value="searchPayAdj" />   		<!-- 급여조정인상률  조회 -->
    <transition name="searchPayAdjScrList"  value="searchPayAdjScrList" />  <!-- 개인별 급여조정점수  조회 -->
    <transition name="searchPayAdjCalc" 	value="searchPayAdjCalc" />   	<!-- 급여조정인상률  재계산 -->
    <transition name="savePayAdj"  			value="savePayAdj" /> 			<!-- 급여조정인상률  저장  -->
    <transition name="success"              value="end" />
  </activity>

  <!-- 급여조정인상률 조회 -->
  <activity name="searchPayAdj"       		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsPayAdj" />
    <property name="sqlkey"                 value="rbs5210_s01" />    
    <property name="param-count"            value="4" />        
    <property name="param0"                 value="CNTR_YEAR" />				<!-- 계약(조정년도) -->
    <property name="param1"                 value="GAME_CD" />					<!-- 종목코드 -->
    <property name="param2"                 value="CNTR_YEAR" />				<!-- 계약(조정년도) -->
    <property name="param3"                 value="CNTR_YEAR" />				<!-- 계약(조정년도) -->
    <property name="dao"                    value="rbmdao" />    	
  </activity>
  
  
  <!-- 개인별 급여조정점수 조회 -->
  <activity name="searchPayAdjScrList"     	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsPayAdjScrList" />
    <property name="sqlkey"                 value="rbs5210_s02" />    
    <property name="param-count"            value="2" />        
    <property name="param0"                 value="RACER_ID" />					<!-- 선수번호 -->
    <property name="param1"                 value="CNTR_YEAR" />				<!-- 계약(조정년도) -->
    <property name="dao"                    value="rbmdao" />    	
  </activity>
  
  
  <!-- 급여조정인상률 재계산 -->
  <activity name="searchPayAdjCalc"    		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsPayAdj" />
    <property name="sqlkey"                 value="rbs5210_s03" />    
    <property name="param-count"            value="4" />        
    <property name="param0"                 value="CNTR_YEAR" />				<!-- 계약(조정년도) -->
    <property name="param1"                 value="GAME_CD" />					<!-- 종목코드 -->
    <property name="param2"                 value="CNTR_YEAR" />				<!-- 계약(조정년도) -->
    <property name="param3"                 value="CNTR_YEAR" />				<!-- 계약(조정년도) -->
    <property name="dao"                    value="rbmdao" />    	
  </activity>
  

  <!-- 급여조정인상률  저장  --> 
  <activity name="savePayAdj"        		class="snis.rbm.business.rbs5210.activity.SavePayAdj">
    <transition name="success"              value="searchPayAdj" />
  </activity>    

  <transaction-manager id="tx_rbm" commit="true" />
</service>
