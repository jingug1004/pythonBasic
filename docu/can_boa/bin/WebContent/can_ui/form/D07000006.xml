function fcCallBack(sServiceName, ErrorCode, ErrorMSG) {

    if ( !fnc_result(ErrorCode, ErrorMSG) ) return;
	
	// 공통코드 조회시
	if ( sServiceName == "common-service:searchCode" ) {
        fcSearch();

        return;
	}
    
	// 선수목록 조회시
	if ( sServiceName == "d07000004-service:searchRacer" ) {
        Trace(dsRacer.SaveXml());
        return;
	}
    
	// 조회시
	if ( sServiceName == "d07000004-service:searchDiaryMst" ) {
        if ( dsDiaryMst.GetRowCount() == 0 ) {
            dsDiaryMst.AddRow();
        }
	
		var j=0;
		for (var i=0; i < dsDiaryAbs.GetRowCount(); i++){
			if(dsDiaryAbs.GetColumn(i, "ABS_EXC_GBN") == "002"){
				j=j+1;
			}
		}
		
        dsDiaryMst.SetColumn(0, "TOT_PERS_NO" , dsRacer.GetRowCount());
        dsDiaryMst.SetColumn(0, "ABS_PERS_NO" , j);
        dsDiaryMst.SetColumn(0, "EXC_PERS_NO" , dsDiaryAbs.GetRowCount() - j);
        dsDiaryMst.SetColumn(0, "CURR_PERS_NO", dsRacer.GetRowCount() - j);
        
        dsDiaryAcdnt.AddColumn("CHK");
        dsDiaryDetl.AddColumn("CHK");
        dsDiaryAbs.AddColumn("CHK");
        return;
	}

	// 공통코드 조회시
	if ( sServiceName == "d07000004-service:saveRacerTrngMst" ) {
        dsDiaryAcdnt.AddColumn("CHK");
        dsDiaryDetl.AddColumn("CHK");
        dsDiaryAbs.AddColumn("CHK");
        return;
	}

        
    //오류가 없이 정상 처리되었다면...
	fcPostProcess(sServiceName);
}

