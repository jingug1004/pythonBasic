function fcCallBack(sServiceName, ErrorCode, ErrorMSG) {

	if ( !fnc_Result(ErrorCode, ErrorMSG) ) return;
	
	// 공통코드 조회시
	if ( sServiceName == "common-service:searchCode" ) {
		if (dsOutTrngRsn.rowcount() > 0) {
			dsOutTrngRsn.Filter("CD='004'");
			var nRow = dsOutTrngRsn.AddRow();
			dsOutTrngRsn.SetColumn(nRow, "CD", "%");
		}
		fcSearch();
		return;
	}

	// 조회 후
	if ( sServiceName == "d07000009-service:searchTrngRoomChrg" ) {
        fnc_SetStatus(SNIS_CAN_0003, dsTrngRoomChrg.GetRowCount());
		return;
	}	
}


