<?xml version="1.0" encoding="EUC-KR"?>
<service name="d06000002" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsPerioNo|dsGudLectr|dsOutEduOutl|dsOutEduAssign|dsDetlEduTime|dsDetlEduAssign|dsOutEduPersCnt|dsOutYearEduSch|dsDetlCfmYn" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPerioNo"        value="searchPerioNo" />
    <transition name="searchGudLectr"    	value="searchGudLectr" />
    <transition name="searchEduTotal"       value="searchEduTotal" />
    <transition name="searchEduAssign"      value="searchEduAssign" />
    <transition name="searchCurrEdu"    	value="searchCurrEdu" />
    <transition name="saveEduOutl"    	    value="saveEduOutl" />
    <transition name="searchYearEduSch"    	value="searchYearEduSch" />
    <transition name="searchDetlCfmYn"    	value="searchDetlCfmYn" />
    <transition name="success" 				value="end" />
  </activity>

  <!-- 기수 콤보 설정 --> 
  <activity name="searchPerioNo"	 	    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchGudLectr" />
    <property name="resultkey" 				value="dsPerioNo" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn001" />
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 강사 콤보 설정 -->
  <activity name="searchGudLectr" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsGudLectr" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn002" />
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 교육개요 조회 -->
  <activity name="searchEduTotal" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchEduAssign" />
    <property name="resultkey" 				value="dsOutEduOutl" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn003" />
    <property name="param-count" 			value="2" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="racerPerioNo" />
    <property name="dao" 					value="candao" />    
  </activity>
  
   <!-- 교육시간표 조회 -->
  <activity name="searchEduAssign" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchCurrEdu" />
    <property name="resultkey" 				value="dsOutEduAssign" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn004" />
    <property name="param-count" 			value="3" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="racerPerioNo" />
    <property name="param2" 				value="newGbnCd" />
    <property name="dao" 					value="candao" />    
  </activity>
  
  <!-- 세부교육등록현황 조회 -->
  <activity name="searchCurrEdu" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchEduDetail" />
    <property name="resultkey" 				value="dsDetlEduTime" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn005" />
    <property name="param-count" 			value="1" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="dao" 					value="candao" />    
  </activity>
  
  <!-- 세부교육시간표 조회 -->
  <activity name="searchEduDetail" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchEduPers" />
    <property name="resultkey" 				value="dsDetlEduAssign" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn006" />
    <property name="param-count" 			value="2" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="newGbnCd" />
    <property name="dao" 					value="candao" />    
  </activity>     

  <!-- 교육인원 조회 -->
  <activity name="searchEduPers" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchYearEduSch" />
    <property name="resultkey" 				value="dsOutEduPersCnt" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn007" />
    <property name="param-count" 			value="1" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="dao" 					value="candao" />    
  </activity> 
  
  <!-- 연간교육계획일정표 조회 -->
  <activity name="searchYearEduSch" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsOutYearEduSch" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn008" />
    <property name="param-count" 			value="1" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="dao" 					value="candao" />    
  </activity>     
        
  <!-- 세부교육일정 확정여부조회 -->
  <activity name="searchDetlCfmYn" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsDetlCfmYn" />
    <property name="sqlkey" 				value="tbdn_cmpt_edu_outl_d06000002_fn009" />
    <property name="param-count" 			value="1" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="dao" 					value="candao" />    
  </activity>
          
  <!-- 종합교육일정 저장 --> 
  <activity name="saveEduOutl" 		    class="snis.can_boa.boatstd.d06000002.activity.SaveTotalEduSchd">
    <transition name="success" 	        value="end" />
  </activity> 	
 
	<transaction-manager id="tx_can" commit="true" />
</service>

