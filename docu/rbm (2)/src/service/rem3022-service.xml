<?xml version="1.0" encoding="EUC-KR"?>

<service name="rem3022" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList"> 
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsStayStatByRace" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchStayStatByTms" value="searchStayStatByTms" />     <!-- 체류인원  경주별 현황 조회 -->
    <transition name="success"              value="end" />
  </activity>

  <!--  경주별 회차별 체류인원 조회  -->  
  <activity name="searchStayStatByTms"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsStayStatByRace" />
    <property name="sqlkey"                 value="rem3022_s01" />
    <property name="param-count"            value="3" />
    <property name="param0"                 value="MEET_CD" />          <!-- 경륜장구분  -->
    <property name="param1"                 value="STND_YEAR" />        <!-- 년도  -->
    <property name="param2"                 value="BRNC_CD" />          <!-- 지점  -->
    <property name="dao"                    value="rbmdao" />       
  </activity>  

  <transaction-manager id="tx_rbm" commit="true" />

</service>
