<?xml version="1.0" encoding="EUC-KR"?> 
<service name="rsm4031" initial="SetResultKeys">
    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  	    <property name="staticResultKeyFile"  value="resultkey.properties" />	    <property name="resultKeyList" 		  value="dsRaceInfo|dsDiv|dsDivSum" />	    <transition name="success" 			  value="EventRouter" />	</activity>  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">
    	<transition name="searchRaceInfo"	value="searchRaceInfo" />	<!-- 경주일 정보 -->
    	<transition name="searchDiv"         value="searchDiv" />	<!-- 제세금 -->		<transition name="success" 			  value="end" />	</activity>
	
	<!-- 경주일 정보 -->
	<activity name="searchRaceInfo" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
	  <transition name="success" 		  value="searchDiv" />
	  <property name="resultkey" 		  value="dsRaceInfo" />
	  <property name="sqlkey" 		  value="rsm4031_s01" />
	  <property name="param-count" 	  value="2" />
	  <property name="param0" 		  value="MEET_CD" />	<!-- 경륜 구분 코드 -->
	  <property name="param1" 		  value="RACE_DAY" />	<!-- 경주일 -->	  
	  <property name="dao" 			  value="rbmdao" />
	</activity>
	
	<!-- 지점별 실적 -->
	<activity name="searchDiv" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
	  <transition name="success" 		  value="searchDivSum" />
	  <property name="resultkey" 		  value="dsDiv" />
	  <property name="sqlkey" 		  value="rsm4031_s02" />
	  <property name="param-count" 	  value="4" />
	  <property name="param0" 		  value="SRCH_MEET_CD" />	<!-- 경주 구분 코드 -->
	  <property name="param1" 		  value="SRCH_MEET_CD" />	<!-- 경주 구분 코드 -->
	  <property name="param2" 		  value="RACE_DAY" />	<!-- 경주일 -->
	  <property name="param3"         value="SRCH_MEET_CD" />   <!-- 경주 구분 코드 -->
	  <property name="dao" 			  value="rbmdao" />
	</activity>
	<!-- 지점별 실적합계 -->	<activity name="searchDivSum" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">	  <transition name="success" 		  value="end" />	  <property name="resultkey" 		  value="dsDivSum" />	  <property name="sqlkey" 		  value="rsm4031_s03" />	  <property name="param-count" 	  value="4" />	  <property name="param0" 		  value="SRCH_MEET_CD" />	<!-- 경주 구분 코드 -->	  <property name="param1" 		  value="SRCH_MEET_CD" />	<!-- 경주 구분 코드 -->	  <property name="param2" 		  value="RACE_DAY" />	<!-- 경주일 -->	  <property name="param3"         value="SRCH_MEET_CD" />   <!-- 경주 구분 코드 -->	  <property name="dao" 			  value="rbmdao" />	</activity>  	
  	<transaction-manager id="tx_rbm" commit="true" /></service>

