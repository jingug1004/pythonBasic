<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbr1016" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsEquipFaci|dsFloorCd" />
    <transition name="success"              value="EventRouter" />
  </activity>


  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchEquipFaci"        value="searchEquipFaci" />    <!-- 장비및시설  조회 -->
    <transition name="saveEquipFaci"          value="saveEquipFaci" />      <!-- 장비및시설  저장 -->
    <transition name="searchFloorCd"          value="searchFloorCd" />      <!-- 지점별  층 코드 조회  -->
    <transition name="success"              value="end" />
  </activity>

  <!--  장비및시설  조회 -->
  <activity name="searchEquipFaci"        class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsEquipFaci" />
    <property name="sqlkey"                 value="rbr1016_s01" />
    
    <property name="param-count"            value="2" />  
    <property name="param0"                 value="BRNC_CD" />       <!-- 지점코드  -->
    <property name="param1"                 value="STND_YEAR" />     <!-- 년도  -->  
    
    <property name="dao"                    value="rbmdao" />

  </activity>  
  
  <!-- 장비및시설  저장 -->
  <activity name="saveEquipFaci"              class="snis.rbm.business.rbr1016.activity.SaveEquipFaci">
    <transition name="success"              value="end" />
  </activity>

  <transaction-manager id="tx_rbm" commit="true" />


  <!-- 지점별  층 코드 조회 -->
   <activity name="searchFloorCd"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"          value="end" />
    <property name="resultkey"          value="dsFloorCd" />

    <property name="sqlkey"             value="rbr1017_s02" />

    <property name="param-count"        value="2" />
    
    <property name="param0"             value="BRNC_CD" />   <!-- 지점 코드  -->
    <property name="param1"             value="STND_YEAR" /> <!-- 년도          -->
    
    <property name="dao"                value="rbmdao" />
  </activity>
</service>



