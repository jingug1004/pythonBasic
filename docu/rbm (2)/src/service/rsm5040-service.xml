<?xml version="1.0" encoding="EUC-KR"?>

<service name="rsm5040" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsPcTax|dsCntChkValid|dsCntSnd" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPcTax"			value="searchPcTax" />     		<!-- 지급조서검증 조회 -->
    <transition name="searchCntChkValid"	value="searchCntChkValid" />	<!-- 일치 불일치 건수 조회 -->
    <transition name="saveDbFile"           value="saveDbFile" />      		<!-- DB파일 읽기 -->
    <transition name="UpdateCustRes"        value="UpdateCustRes" />      	<!-- PC파일의 주민번호 수정 -->
  </activity>
  
  <!-- 지급조서내역 조회 -->
  <activity name="searchPcTax"          class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"          value="searchCntChkValid" />

    <property name="resultkey"          value="dsPcTax" />
    <property name="sqlkey"             value="rsm5040_s02" />

    <property name="param-count"        value="12" />
    <property name="param0"             value="PAY_YEAR" />     <!-- 지급년도 -->
    <property name="param1"             value="MEET_CD" />      <!-- 경륜장코드(시행처)-->
    <property name="param2"             value="SELL_CD" />      <!-- 운영처코드(판매처)-->    
    <property name="param3"             value="BRNC_CD" />      <!-- 지점코드--> 
    <property name="param4"             value="BRNC_CD" />      <!-- 지점코드-->
    <property name="param5"             value="BRNC_CD" />      <!-- 지점코드-->  
    <property name="param6"             value="PAY_YEAR" />     <!-- 지급년도 -->
    <property name="param7"             value="MEET_CD" />      <!-- 경륜장코드(시행처)-->
    <property name="param8"             value="SELL_CD" />      <!-- 운영처코드(판매처)-->    
    <property name="param9"             value="BRNC_CD" />      <!-- 지점코드-->   
    <property name="param10"            value="BRNC_CD" />      <!-- 지점코드-->
    <property name="param11"            value="BRNC_CD" />      <!-- 지점코드-->
    
    <property name="dao"                value="rbmdao" />
  </activity>
  
  
  <!-- 일치 불일치 건수 조회 -->
  <activity name="searchCntChkValid"          class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"          value="searchCntSnd" />

    <property name="resultkey"          value="dsCntChkValid" />
    <property name="sqlkey"             value="rsm5040_s06" />

    <property name="param-count"        value="12" />
    <property name="param0"             value="PAY_YEAR" />     <!-- 지급년도 -->
    <property name="param1"             value="MEET_CD" />      <!-- 경륜장코드(시행처)-->
    <property name="param2"             value="SELL_CD" />      <!-- 운영처코드(판매처)-->    
    <property name="param3"             value="BRNC_CD" />      <!-- 지점코드--> 
    <property name="param4"             value="BRNC_CD" />      <!-- 지점코드-->
    <property name="param5"             value="BRNC_CD" />      <!-- 지점코드-->  
    <property name="param6"             value="PAY_YEAR" />     <!-- 지급년도 -->
    <property name="param7"             value="MEET_CD" />      <!-- 경륜장코드(시행처)-->
    <property name="param8"             value="SELL_CD" />      <!-- 운영처코드(판매처)-->    
    <property name="param9"             value="BRNC_CD" />      <!-- 지점코드-->   
    <property name="param10"            value="BRNC_CD" />      <!-- 지점코드-->
    <property name="param11"            value="BRNC_CD" />      <!-- 지점코드-->
    
    <property name="dao"                value="rbmdao" />
  </activity>
  
  
  <!-- 일괄 확정 여부 조회 -->
  <activity name="searchCntSnd"          class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"          value="end" />
    <property name="resultkey"          value="dsCntSnd" />
    <property name="sqlkey"             value="rsm5040_s08" />
    <property name="param-count"        value="1" />
    <property name="param0"             value="PAY_YEAR" />     <!-- 지급년도 -->
    <property name="dao"                value="rbmdao" />
  </activity>
  
  <!-- DB파일 읽기 -->
  <activity name="saveDbFile"              class="snis.rbm.business.rsm5040.activity.SaveDbFile">
    <transition name="success"             value="end" />
  </activity>
  
  <!-- PC파일의 주민번호 수정 -->
  <activity name="UpdateCustRes"           class="snis.rbm.business.rsm5040.activity.UpdateCustRes">
    <transition name="success"             value="searchPcTax" />
  </activity>

  <transaction-manager id="tx_rbm" commit="true" />
</service>