***************************************************************************************************/
/*-------------------------------------------------------------------------------------------------+
>>  최초 화면 Load時 처리 할 사항
+-------------------------------------------------------------------------------------------------*/
function fcFormLoadSetting(obj) {  

	dsUserPw.SetColumn(0,"USER_ID",sUserId);
	dsUserPw.SetColumn(0,"GBN",sGbn);
	
	fnc_message("암호가 초기값과 같습니다. 암호를 변경해 주세요.!", "N");
	edOldPswd.SetFocus();	
}

/*-------------------------------------------------------------------------------------------------+
>>  최초 화면 UNLoad時 처리 할 사항
