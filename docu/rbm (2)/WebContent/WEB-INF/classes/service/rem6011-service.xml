<?xml version="1.0" encoding="EUC-KR"?>

<service name="rem6011" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsTradeList|dsRaceNo|dsTradeKm|dsTradeMsr" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchTradeSum"  		value="searchTradeSum" />	<!-- 무료입장인원 조회 -->
    <transition name="searchTradeKm"  		value="searchTradeKm" />	<!-- 광명현금 입장인원 조회 -->
    <transition name="searchTradeMsr"  		value="searchTradeMsr" />	<!-- 미사리현금 입장인원 조회 -->
    <transition name="saveTradeList"      	value="saveTradeList" />    <!-- 무료입장인원 저장  -->
    <transition name="saveTradeListKm"     	value="saveTradeListKm" />  <!-- 광명현금 입장인원 저장  -->
    <transition name="saveTradeListMsr"     value="saveTradeListMsr" /> <!-- 미사리현금 입장인원 저장  -->
    <transition name="success"              value="end" />
  </activity>


  <!-- 무료입장인원 조회 -->  
  <activity name="searchTradeSum"       	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"         		value="end" />
    <property name="sqlkey"            		value="rem6011_s01" />
    <property name="resultkey"         		value="dsTradeList" />
    <property name="param-count"       		value="8" />    
    <property name="param0"            		value="STR_DT" />	<!-- 입장시작일 -->
    <property name="param1"            		value="END_DT" />	<!-- 입장종료일 -->
    <property name="param2"            		value="COMM_NO" />	<!-- 지점 -->
    <property name="param3"            		value="STR_DT" />	<!-- 입장시작일 -->
    <property name="param4"            		value="END_DT" />	<!-- 입장종료일 -->
    <property name="param5"            		value="MEET_CD" />	<!-- 경주구분 -->
    <property name="param6"            		value="COMM_NO" />	<!-- 지점 -->
    <property name="param7"            		value="USER_ID" />	<!-- 사용자 -->
    <property name="dao"               		value="rbmdao" />
  </activity>  
  
  <!-- 광명 현금 입장인원 조회 -->  
  <activity name="searchTradeKm"       		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"         		value="end" />
    <property name="sqlkey"            		value="rem6011_s02" />
    <property name="resultkey"         		value="dsTradeKm" />
    <property name="param-count"       		value="3" />
    <property name="param0"            		value="USER_ID" />	<!-- 사용자 -->
    <property name="param1"            		value="STR_DT" />	<!-- 입장시작일 -->
    <property name="param2"            		value="END_DT" />	<!-- 입장종료일 -->
    <property name="dao"               		value="rbmdao" />
  </activity> 
  
  <!-- 미사리 현금 입장인원 조회 -->  
  <activity name="searchTradeMsr"       	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"         		value="end" />
    <property name="sqlkey"            		value="rem6011_s03" />
    <property name="resultkey"         		value="dsTradeMsr" />
    <property name="param-count"       		value="3" />
    <property name="param0"            		value="USER_ID" />	<!-- 사용자 -->    
    <property name="param1"            		value="STR_DT" />	<!-- 입장시작일 -->
    <property name="param2"            		value="END_DT" />	<!-- 입장종료일 -->
    <property name="dao"               		value="rbmdao" />
  </activity>   
  
  <!-- 무료 입장인원 저장  -->
  <activity name="saveTradeList"            class="snis.rbm.business.rem6011.activity.SaveTradeList">
    <transition name="success"              value="end" />
  </activity>
  
  <!-- 광명현금 입장인원 저장  -->
  <activity name="saveTradeListKm"          class="snis.rbm.business.rem6011.activity.SaveTradeListKm">
    <transition name="success"              value="end" />
  </activity>
  
  <!-- 미사리 입장인원 저장  -->
  <activity name="saveTradeListMsr"         class="snis.rbm.business.rem6011.activity.SaveTradeListMsr">
    <transition name="success"              value="end" />
  </activity>
    
  <transaction-manager id="tx_rbm" commit="true" />

</service>



