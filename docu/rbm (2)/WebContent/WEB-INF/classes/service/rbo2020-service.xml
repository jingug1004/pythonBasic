<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbo2020" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  

    <property name="staticResultKeyFile"    value="resultkey.properties" />

    <property name="resultKeyList"          value="dsAppoSeatMana|dsSalesMana|dsAppoSeat|dsAppoSeatCard" />

    <transition name="success"              value="EventRouter" />

  </activity>

  

  <activity name="EventRouter"                class="com.posdata.glue.biz.activity.PosDefaultRouter">

    <transition name="searchAppoSeatMana"      value="searchAppoSeatMana" />
    
    <transition name="searchSalesMana"         value="searchSalesMana" />
    
    <transition name="searchAppoSeat"          value="searchAppoSeat" />

    <transition name="saveAppoSeatMana"        value="saveAppoSeatMana" />
    
    <transition name="saveAppoSeatPrint"       value="saveAppoSeatPrint" />  
    
    
    <transition name="saveSeatGbn"             value="saveSeatGbn" />
    
    <transition name="searchAppoSeatCard"      value="searchAppoSeatCard" />  <!-- 카드고객 등급 조회 -->

    <transition name="success"                 value="end" />

  </activity>


  

  <!-- 일일매표 조회 -->
  
  <activity name="searchAppoSeatMana"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsAppoSeatMana" />

    <property name="sqlkey"                 value="rbo2020_s01" />

    <property name="param-count"            value="2" />

    <property name="param0"                 value="SALES_DT" />
    <property name="param1"                 value="BRNC_CD" />


    <property name="dao"                    value="rbmdao" />

  </activity>  
 
 
  <!-- 일일매표 판매번호별  조회 -->
  <activity name="searchSalesMana"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsSalesMana" />

    <property name="sqlkey"                 value="rbo2020_s02" />

    <property name="param-count"            value="3" />

    <property name="param0"                 value="SALES_DT" />
    <property name="param1"                 value="BRNC_CD" />
    <property name="param2"                 value="SALES_NO" />

    <property name="dao"                    value="rbmdao" />

  </activity>  
  
  
<!-- 좌석번호별 판매여부  조회 -->
  <activity name="searchAppoSeat"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsAppoSeat" />

    <property name="sqlkey"                 value="rbo2020_s03" />

    <property name="param-count"            value="2" />

    <property name="param0"                 value="BRNC_CD" />
    <property name="param1"                 value="SALES_DT" />
   


    <property name="dao"                    value="rbmdao" />

  </activity>  


  <!-- 일일매표 저장(발권) -->
  <activity name="saveAppoSeatPrint"         class="snis.rbm.business.rbo2020.activity.SaveAppoSeatMana">
    <transition name="success"              value="searchSalesMana" />
  </activity>
  
  <!-- 일일매표 저장 -->
  <activity name="saveAppoSeatMana"         class="snis.rbm.business.rbo2020.activity.SaveAppoSeatMana">
    <transition name="success"              value="searchSalesMana" />
  </activity>
  
  

  <!-- 좌석구분 저장  -->
  <activity name="saveSeatGbn"              class="snis.rbm.business.rbo2020.activity.SaveAppoSeatMana">
    <transition name="success"              value="end" />
  </activity>


  <!-- 카드고객 등급 조회 -->
  
  <activity name="searchAppoSeatCard"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsAppoSeatCard" />

    <property name="sqlkey"                 value="rbo2060_s01" />

    <property name="param-count"            value="5" />

    <property name="param0"                 value="GRN_CRD_NO" />   <!-- 카드 번호 -->
    <property name="param1"                 value="CUST_CRD_CD" />  <!-- 고객 등급 -->
    
    <property name="param2"                 value="BRNC_CD" />      <!-- 지점 코드 -->
    <property name="param3"                 value="BRNC_CD" />      <!-- 지점 코드 -->
    <property name="param4"                 value="BRNC_CD" />      <!-- 지점 코드 -->

    <property name="dao"                    value="rbmdao" />

  </activity>  
  <transaction-manager id="tx_rbm" commit="true" />

</service>



