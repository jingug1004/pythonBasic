<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs5050" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsPayAdjScrRule" />
    <transition name="success"              value="EventRouter" />
  </activity>  

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPayAdjScrRule"  value="searchPayAdjScrRule" />   		<!-- 보수조정점수  조회 -->
    <transition name="savePayAdjScrRule"  	value="savePayAdjScrRule" /> 			<!-- 보수조정점수  저장  -->
    <transition name="success"              value="end" />
  </activity>

  <!-- 보수조정점수 조회 -->
  <activity name="searchPayAdjScrRule"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsPayAdjScrRule" />
    <property name="sqlkey"                 value="rbs5050_s01" />    
    <property name="param-count"            value="1" />        
    <property name="param0"                 value="GAME_CD" />					<!-- 종목코드 -->
    <property name="dao"                    value="rbmdao" />    	
  </activity>
  
  
  <!-- 보수조정점수  저장  --> 
  <activity name="savePayAdjScrRule"        class="snis.rbm.business.rbs5050.activity.SavePayAdjScrRule">
    <transition name="success"              value="searchPayAdjScrRule" />
  </activity>    

  <transaction-manager id="tx_rbm" commit="true" />
</service>
