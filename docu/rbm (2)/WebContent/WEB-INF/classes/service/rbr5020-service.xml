<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbr5020" initial="SetResultKeys">

  <activity name="SetResultKeys" 			class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" 	value="resultkey.properties" />
    <property name="resultKeyList" 			value="dsVeriProcStat|dsVeriSumm|dsVeriDetl" />
    <transition name="success" 				value="EventRouter" />
  </activity>

  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchVeriProcStat"  	value="searchVeriProcStat" /> 	<!-- 검수진행상태 조회  -->
	<transition name="searchVeriSumm"  		value="searchVeriSumm" />  		<!-- 검수내역 요약정보 조회 -->
    <transition name="searchVeriDetl"  		value="searchVeriDetl" />  		<!-- 검수내역 세부정보 조회  -->
    <transition name="saveVeriStat"   		value="saveVeriStat" />		<!-- 검수상태 저장  -->
    <transition name="saveCancelStat"   	value="saveCancelStat" />		<!-- 지점 검수 취소 저장  -->
    
  </activity>
  
  <!-- 검수진행상태 조회 조회 -->
  <activity name="searchVeriProcStat" 	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 			value="searchVeriSumm" />
    <property name="resultkey" 			value="dsVeriProcStat" />
    <property name="sqlkey"				value="rbr5020_s01" />
    <property name="param-count" 		value="3" />
    <property name="param0" 			value="STND_YEAR" /> <!-- 기준년도 -->
    <property name="param1" 			value="USER_ID" />   <!-- 사번 -->
    <property name="param2" 			value="STND_MM" />   <!-- 기준월 -->
    <property name="dao" 				value="rbmdao" />
  </activity> 
  
  <!-- 검수내역 요약정보 조회 -->
  <activity name="searchVeriSumm" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 			value="searchVeriDetl" />
    <property name="resultkey" 			value="dsVeriSumm" />
    <property name="sqlkey"				value="rbr5020_s02" />
	<property name="param-count" 		value="3" />
    <property name="param0" 			value="STND_YEAR" /> <!-- 기준년도 -->
    <property name="param1" 			value="USER_ID" />   <!-- 사번 -->
    <property name="param2" 			value="STND_MM" />   <!-- 기준월 -->
    <property name="dao" 				value="rbmdao" />
  </activity>
  
  <!-- 검수내역 요약정보 조회 -->
  <activity name="searchVeriDetl" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 			value="end" />
    <property name="resultkey" 			value="dsVeriDetl" />
    <property name="sqlkey"				value="rbr5020_s03" />
	<property name="param-count" 		value="3" />
    <property name="param0" 			value="STND_YEAR" /> <!-- 기준년도 -->
    <property name="param1" 			value="USER_ID" />   <!-- 사번 -->
    <property name="param2" 			value="STND_MM" />   <!-- 기준월 -->
    <property name="dao" 				value="rbmdao" />
  </activity>
 
  <!-- 출주표 검수상태 저장 -->
  <activity name="saveVeriStat" 	class="snis.rbm.business.rbr5020.activity.SaveVeriStat">
    <transition name="success" 			value="end" />
  </activity>
  
  <!-- 출주표 지점검수취소 저장 -->
  <activity name="saveCancelStat" 	class="snis.rbm.business.rbr5020.activity.SaveCancelStat">
    <transition name="success" 			value="end" />
  </activity>
  
  <transaction-manager id="tx_rbm" commit="true" />

</service>