<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs5060" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsPayAdjRateRule" />
    <transition name="success"              value="EventRouter" />
  </activity>  

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPayAdjRateRule"  value="searchPayAdjRateRule" />   		<!-- 점수별 인상률  조회 -->
    <transition name="savePayAdjRateRule"  	value="savePayAdjRateRule" /> 			<!-- 점수별 인상률  저장  -->
    <transition name="success"              value="end" />
  </activity>

  <!-- 점수별 인상률 조회 -->
  <activity name="searchPayAdjRateRule"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsPayAdjRateRule" />
    <property name="sqlkey"                 value="rbs5060_s01" />    
    <property name="param-count"            value="1" />        
    <property name="param0"                 value="GAME_CD" />					<!-- 종목코드 -->
    <property name="dao"                    value="rbmdao" />    	
  </activity>
  
  
  <!-- 점수별 인상률  저장  --> 
  <activity name="savePayAdjRateRule"        class="snis.rbm.business.rbs5060.activity.SavePayAdjRateRule">
    <transition name="success"              value="searchPayAdjRateRule" />
  </activity>    

  <transaction-manager id="tx_rbm" commit="true" />
</service>
