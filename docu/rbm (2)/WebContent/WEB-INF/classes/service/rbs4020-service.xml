<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs4020" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  

    <property name="staticResultKeyFile"    value="resultkey.properties" />

    <property name="resultKeyList"          value="dsReportSubm|dsReportUploadFile|dsSubmUploadFile" />

    <transition name="success"              value="EventRouter" />

  </activity>

  
  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">

    <transition name="searchReportSubm"         value="searchReportSubm" />     <!-- 보고서 제출 조회  -->
    <transition name="saveReportSubm"           value="saveReportSubm" />       <!-- 보고서 제출 저장  -->
    
    <transition name="searchReportFile"         value="searchReportFile" />     <!-- 양식파일조회   -->    
    <transition name="searchSubmFile"           value="searchSubmFile" />       <!-- 보고서제출파일조회  -->    

    <transition name="success"                  value="end" />

  </activity>


  <!-- 보고서 제출 조회 -->  
  <activity name="searchReportSubm"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsReportSubm" />

    <property name="sqlkey"                 value="rbs4020_s01" />

    <property name="param-count"            value="4" />

    <property name="param0"                 value="DEPT_CD" />                  <!-- 부서코드 -->
    <property name="param1"                 value="SUBM_LIMIT_STR_DT" />        <!-- 요청일자 -->
    <property name="param2"                 value="SUBM_LIMIT_END_DT" />        <!-- 요청일자 -->
    <property name="param3"                 value="REPORT_NM" />                <!-- 보고서명 -->
                
                
    <property name="dao"                    value="rbmdao" />

  </activity>  


  <!-- 보고서 제출 저장 -->  
  <activity name="saveReportSubm"          class="snis.rbm.business.rbs4020.activity.SaveReportSubm">
    <transition name="success"              value="end" />
  </activity>


 <!-- 양식파일 조회   -->  
  <activity name="searchReportFile"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsReportUploadFile" />
    <property name="sqlkey"                 value="common_file_s01" />
    <property name="param-count"            value="1" />
    <property name="param0"                 value="ATT_FILE_KEY" />
    <property name="dao"                    value="rbmdao" />

  </activity>  
  

  <!-- 보고서제출파일조회 -->
  <activity name="searchSubmFile"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsSubmUploadFile" />
    <property name="sqlkey"                 value="common_file_s01" />
    <property name="param-count"            value="1" />
    <property name="param0"                 value="ATT_FILE_KEY" />
    <property name="dao"                    value="rbmdao" />

  </activity>  
  
  <transaction-manager id="tx_rbm" commit="true" />

</service>



