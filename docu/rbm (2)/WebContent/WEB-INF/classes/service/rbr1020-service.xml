<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbr1011" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsBrncFacGbn|dsBrncFacCd|dsBrncFacFloor" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchBrncFacGbn"             value="searchBrncFacGbn" />      <!-- 지점현황 지점 시설  조회(시설구분별) -->
    <transition name="searchBrncFacCd"              value="searchBrncFacCd" />      <!-- 지점현황 지점 시설  조회(시설,층별) -->
    <transition name="searchBrncFacFloor"            value="searchBrncFacFloor" />      <!-- 지점현황 지점 시설  조회(시설구분,층별) -->
   
  </activity>
  
 <!-- 지점현황 지점 시설  조회(시설구분별)  -->
  <activity name="searchBrncFacGbn"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"          value="end" />
    <property name="resultkey"          value="dsBrncFacGbn" />

    <property name="sqlkey"             value="rbr1020_s01" />

    <property name="param-count"        value="1" />
    
    <property name="param0"             value="STND_YEAR" />   <!-- 년도         -->
    
    <property name="dao"                value="rbmdao" />

  </activity>
  
  <!-- 지점현황 지점 시설  조회(시설)  -->
  <activity name="searchBrncFacCd"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"          value="end" />
    <property name="resultkey"          value="dsBrncFacCd" />

    <property name="sqlkey"             value="rbr1020_s02" />

    <property name="param-count"        value="1" />
    
    <property name="param0"             value="STND_YEAR" />   <!-- 년도         -->
    
    <property name="dao"                value="rbmdao" />

  </activity>
  
  <!-- 지점현황 지점 시설  조회(시설구분,층별)  -->
  <activity name="searchBrncFacFloor"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"          value="end" />
    <property name="resultkey"          value="dsBrncFacFloor" />

    <property name="sqlkey"             value="rbr1020_s03" />

    <property name="param-count"        value="2" />
    
    <property name="param0"             value="STND_YEAR" />   <!-- 년도         -->
    <property name="param1"             value="STND_YEAR" />   <!-- 년도         -->
    
    <property name="dao"                value="rbmdao" />

  </activity>
  

  <transaction-manager id="tx_rbm" commit="true" />

</service>