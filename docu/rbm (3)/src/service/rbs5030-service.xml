<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs5030" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsContestList" />
    <transition name="success"              value="EventRouter" />
  </activity>  

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchContestList"  	value="searchContestList" />   		<!-- 경기대회  조회 -->
    <transition name="saveContestList"  	value="saveContestList" /> 			<!-- 경기대회  저장  -->
    <transition name="success"              value="end" />
  </activity>

  <!-- 경기대회 조회 -->
  <activity name="searchContestList"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsContestList" />
    <property name="sqlkey"                 value="rbs5030_s01" />    
    <property name="param-count"            value="4" />        
    <property name="param0"                 value="GAME_CD" />					<!-- 종목코드 -->
    <property name="param1"                 value="CONTEST_NM" />				<!-- 대회명  -->
    <property name="param2"                 value="STR_DY" />					<!-- 조회시작기간  -->
    <property name="param3"                 value="END_DY" />					<!-- 조회종료기간  -->
    <property name="dao"                    value="rbmdao" />    	
  </activity>
  
  
  <!-- 경기대회  저장  --> 
  <activity name="saveContestList"          class="snis.rbm.business.rbs5030.activity.SaveContestList">
    <transition name="success"              value="searchContestList" />
  </activity>    

  <transaction-manager id="tx_rbm" commit="true" />
</service>
