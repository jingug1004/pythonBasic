<?xml version="1.0" encoding="EUC-KR"?>
 
<service name="rev1030" initial="SetResultKeys">

    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
	    <property name="staticResultKeyFile"  value="resultkey.properties" />
	    <property name="resultKeyList" 		  value="dsTotWkFld|dsItemGrd|dsConst" />
	    <transition name="success" 			  value="EventRouter" />
	</activity>
  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">
	    <transition name="searchEstmStnd"     value="searchEstmStnd" />
	    <transition name="saveEstmStnd"     value="saveEstmStnd" />		
		<transition name="success" 			 value="end" />
	</activity>
 
	<!-- 그리드 조회 -->
	<activity name="searchEstmStnd" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
		<transition name="success" 		  value="searchEstmStnd2" />
		<property name="resultkey" 		  value="dsTotWkFld" />
		<property name="sqlkey" 		  value="rev1030_s01" />
		<property name="param-count" 	  value="2" />
		<property name="param0" 		  value="ESTM_YEAR" />
		<property name="param1" 		  value="ESTM_NUM" />    
		<property name="dao" 			  value="rbmdao" />
	</activity>
	
	<activity name="searchEstmStnd2" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
		<transition name="success" 		  value="searchUpdateFlag" />
		<property name="resultkey" 		  value="dsItemGrd" />
		<property name="sqlkey" 		  value="rev1030_s02" />
		<property name="param-count" 	  value="2" />
		<property name="param0" 		  value="ESTM_YEAR" />
		<property name="param1" 		  value="ESTM_NUM" />    
		<property name="dao" 			  value="rbmdao" />
	</activity>
  	
  	<!-- 화면 수정 가능 여부 조회  -->
	<activity name="searchUpdateFlag" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
		<transition name="success" 		  value="end" />
		<property name="resultkey" 		  value="dsConst" />
		<property name="sqlkey" 		  value="rev1020_s05" />
		<property name="param-count" 	  value="2" />
		<property name="param0" 		  value="ESTM_YEAR" />    
		<property name="param1" 		  value="ESTM_NUM" />    
		<property name="dao" 			  value="rbmdao" />
	</activity>

  	<!-- 평가 저장 -->
  	<activity name="saveEstmStnd" 		class="snis.rbm.business.rev1030.activity.SaveEstmStnd">
    	<transition name="success" 			value="end" />
  	</activity>
  	
  <transaction-manager id="tx_rbm" commit="true" />
</service>



