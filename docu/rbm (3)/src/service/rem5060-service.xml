<?xml version="1.0" encoding="EUC-KR"?>
<service name="rem5060" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsGoodSum|dsIfisList" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchGoodSum"  		value="searchGoodSum" />       <!--  기간별 상품입출내역 조회 -->
    <transition name="searchIfisOutDecise"  value="searchIfisOutDecise" />       <!--  통합재무지출내역 조회 -->
    <transition name="success"              value="end" />
  </activity>

  <!--  지점별 상품출고내역 조회 -->  
  <activity name="searchGoodSum"       	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsGoodSum" />
    <property name="sqlkey"                 value="rem5060_s01" />    
    <property name="param-count"            value="3" />    
    <property name="param0"                 value="BRNC_CD" />     <!--  지점코드 -->
    <property name="param1"                 value="STR_DT" />      <!--  출고일 -->
    <property name="param2"                 value="END_DT" />      <!--  출고일 -->
    <property name="dao"                    value="rbmdao" />
  </activity>  
  

  <!--  통합재무지출내역 조회 -->  
  <activity name="searchIfisOutDecise"       	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsIfisList" />
    <property name="sqlkey"                 value="rem5060_s02" />    
    <property name="param-count"            value="5" />    
    <property name="param0"                 value="STR_DT" />      <!--  시작일자 -->
    <property name="param1"                 value="DEPT_CD" />     <!--  부서코드(실) -->
    <property name="param2"                 value="STR_DT" />      <!--  시작일자 -->
    <property name="param3"                 value="END_DT" />      <!--  종료일자 -->
    <property name="param4"                 value="RMK" />         <!--  지출결의서 적요 -->
    <property name="dao"                    value="venisrbmdao" />
  </activity>  
  
  
  <transaction-manager id="tx_rbm" commit="true" />
</service>
