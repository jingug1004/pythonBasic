<?xml version="1.0" encoding="EUC-KR"?>
<service name="rsy2010" initial="SetResultKeys">
  <activity name="SetResultKeys" 			class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" 	value="resultkey.properties" />
    <property name="resultKeyList" 			value="dsMenuGrpValue|dsMenuGrpList" />
    <transition name="success" 				value="EventRouter" />
  </activity>
  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchMenuGrpValue"  	value="searchMenuGrpValue" /> <!-- 메뉴그룹  조회 -->  
    <transition name="searchMenuGrpList"  	value="searchMenuGrpList" />  <!-- 메뉴리스트  조회 -->
    <transition name="saveMenu"   			value="saveMenu" />    
    <transition name="success" 				value="end" />
  </activity>

  <!-- 메뉴그룹  조회 -->
  <activity name="searchMenuGrpValue" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsMenuGrpValue" />
    <property name="sqlkey" 				value="rsy2010_s01" />
    <property name="param-count" 			value="1" />
    <property name="param0" 				value="MN_GRP" />
    <property name="dao" 					value="rbmdao" />    
  </activity>
  <!-- 메뉴리스트  조회 -->
  <activity name="searchMenuGrpList" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsMenuGrpList" />
    <property name="sqlkey" 				value="rsy2010_s02" />
    <property name="param-count" 			value="1" />
    <property name="param0" 				value="MN_ID" />  
    <property name="dao" 					value="rbmdao" />    
  </activity>
    <activity name="saveMenu" 				class="snis.rbm.system.rsy2010.activity.SaveMenu">
    <transition name="success" 				value="end" />
    <transition name="failure"              value="end" />
  </activity>    
  <transaction-manager id="tx_rbm" commit="true" />
</service>