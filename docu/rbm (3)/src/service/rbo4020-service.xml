<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbo4020" initial="SetResultKeys">

    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
	    <property name="staticResultKeyFile"  value="resultkey.properties" />
	    <property name="resultKeyList" 		  value="dsComParts|dsList" />	  
	    <transition name="success" 			  value="EventRouter" />
	</activity>
  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">    		
	    <transition name="searchComParts"     value="searchComParts" />
	    <transition name="searchList"         value="searchList" />	
	    <transition name="SavePartsIn"     	  value="SavePartsIn" />	
		<transition name="success" 			  value="end" />
	</activity>
	
	<!-- 모델별 부품 콤보(공통코드화) 조회 -->
  <activity name="searchComParts"		  class="com.posdata.glue.miplatform.biz.activity.PosSearch">  
	
	<transition name="success" 		  value="end" />
	
	<property name="resultkey" 		  value="dsComParts" />
	<property name="sqlkey" 		  value="rbo4020_s02" />
	<property name="param-count" 	  value="2" />
	<property name="param0" 		  value="PARTS_LCD" />    
	<property name="param1" 		  value="PARTS_MCD" />
	<property name="dao" 			  value="rbmdao" />

  </activity>

	<!-- 모델별 부품 입고 정보 조회 -->
  <activity name="searchList"		  class="com.posdata.glue.miplatform.biz.activity.PosSearch">  
	
	<transition name="success" 		  value="end" />
	
	<property name="resultkey" 		  value="dsList" />
	<property name="sqlkey" 		  value="rbo4020_s01" />
	<property name="param-count" 	  value="5" />
	<property name="param0" 		  value="PARTS_LCD" />    
	<property name="param1" 		  value="PARTS_MCD" />  
	<property name="param2" 		  value="PARTS_CD" /> 	
	<property name="param3" 		  value="IN_DT_FROM" />  
	<property name="param4" 		  value="IN_DT_TO" />
	<property name="dao" 			  value="rbmdao" />

  </activity>

	<!-- 부품 입고 정보 저장 -->
  <activity name="SavePartsIn" 	  class="snis.rbm.business.rbo4020.activity.SavePartsIn">
    	<transition name="success" 	  value="end" />
  </activity>
  	
  <transaction-manager id="tx_rbm" commit="true" />

</service>