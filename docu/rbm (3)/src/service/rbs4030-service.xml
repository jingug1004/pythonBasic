<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbs4030" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  

    <property name="staticResultKeyFile"    value="resultkey.properties" />

    <property name="resultKeyList"          value="dsReportMana|dsReportMng|dsUploadFile" />

    <transition name="success"              value="EventRouter" />

  </activity>

  
  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">

    <transition name="searchReportMana"         value="searchReportMana" />     <!-- 보고서  조회  -->
    <transition name="searchReportSubm"         value="searchReportSubm" />     <!-- 보고서제출 내역 조회   -->    
    <transition name="searchSubmFile"           value="searchSubmFile" />       <!-- 보고서제출 파일조회  -->    

    <transition name="success"                  value="end" />

  </activity>


  <!-- 보고서  조회 -->  
  <activity name="searchReportMana"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsReportMana" />

    <property name="sqlkey"                 value="rbs4030_s01" />

    <property name="param-count"            value="6" />

    <property name="param0"                 value="DEPT_CD" />                  <!-- 부서코드 -->
    <property name="param1"                 value="SUBM_LIMIT_STR_DT" />        <!-- 제출기한  -->
    <property name="param2"                 value="SUBM_LIMIT_END_DT" />        <!-- 제출기한  -->
    <property name="param3"                 value="REPORT_NM" />                <!-- 보고서명 -->
    <property name="param4"                 value="SUBM_YN" />                  <!-- 제출여부 -->
    <property name="param5"                 value="MNG_NM" />                   <!-- 담당자 -->
                
                
    <property name="dao"                    value="rbmdao" />

  </activity>  

  
  <!-- 보고서제출 내역 조회 -->
  <activity name="searchReportSubm"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsReportMng" />

    <property name="sqlkey"                 value="rbs4030_s02" />

    <property name="param-count"            value="5" />

    <property name="param0"                 value="DEPT_CD" />          <!-- 부서코드 -->
    <property name="param1"                 value="STND_YEAR" />        <!-- 년도  -->
    <property name="param2"                 value="SEQ" />              <!-- 순번  -->
    <property name="param3"                 value="SUBM_YN" />          <!-- 제출여부 -->
    <property name="param4"                 value="MNG_NM" />                   <!-- 담당자 -->

    <property name="dao"                    value="rbmdao" />

  </activity>  
  
  <!-- 보고서제출 파일조회  -->
  <activity name="searchSubmFile"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsUploadFile" />
    <property name="sqlkey"                 value="common_file_s01" />
    <property name="param-count"            value="1" />
    <property name="param0"                 value="ATT_FILE_KEY" />
    <property name="dao"                    value="rbmdao" />

  </activity>  
  
  <transaction-manager id="tx_rbm" commit="true" />

</service>



