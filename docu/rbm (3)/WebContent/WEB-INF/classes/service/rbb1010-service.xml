<?xml version="1.0" encoding="EUC-KR"?>

<service name="rbb1010" initial="SetResultKeys">

  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  

    <property name="staticResultKeyFile"    value="resultkey.properties" />

    <property name="resultKeyList"          value="dsBusiNotice|dsNoticeBbs|dsMraBbs|dsBrncBbs|dsBbs" />

    <transition name="success"              value="EventRouter" />

  </activity>

  

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">

    <transition name="searchBusiNotice"         value="searchBusiNotice" />
    <transition name="searchBbs"                value="searchBbs" />
    
    <transition name="searchNoticeBbs"              value="searchNoticeBbs" />     <!-- 게시판   조회 -->
    <transition name="searchMraBbs"                 value="searchMraBbs" />     <!-- 게시판   조회 -->
    <transition name="searchBrncBbs"                value="searchBrncBbs" />     <!-- 게시판   조회 -->
   

    <transition name="success"              value="end" />

  </activity>

  
  <activity name="searchBusiNotice"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsBusiNotice" />

    <property name="sqlkey"                 value="rbb1010_s01" />

    <property name="param-count"            value="3" />
    <property name="param0"                 value="BBS_ID" />    <!-- 게시판ID -->
    <property name="param1"                 value="SRCH_STR_DT" />    <!-- 게시판ID -->
    <property name="param2"                 value="SRCH_END_DT" />    <!-- 게시판ID -->


    <property name="dao"                    value="jupitdao" />

  </activity>  
  
  
   <activity name="searchBbs"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />

    <property name="resultkey"              value="dsBbs" />
    <property name="sqlkey"                 value="rbb1010_s02" />
    <property name="param-count"            value="0" />

    <property name="dao"                    value="jupitdao" />

  </activity>  

<!-- 게시판   조회 (공지사항) -->  
  <activity name="searchNoticeBbs"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsNoticeBbs" />
    <property name="sqlkey"                 value="commonMain_s07" />

    <property name="param-count"            value="1" />
    <property name="param0"                 value="BBS_ID" />

    <property name="dao"                    value="jupitdao" />

  </activity>
  
   <!-- 게시판   조회(경륜.경정)) -->  
  <activity name="searchMraBbs"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsMraBbs" />
    <property name="sqlkey"                 value="commonMain_s07" />

    <property name="param-count"            value="1" />
    <property name="param0"                 value="BBS_ID" />

    <property name="dao"                    value="jupitdao" />

  </activity>
  
   <!-- 게시판   조회(지점) -->  
  <activity name="searchBrncBbs"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">

    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsBrncBbs" />
    <property name="sqlkey"                 value="commonMain_s07"/>

    <property name="param-count"            value="1" />
    <property name="param0"                 value="BBS_ID" />

    <property name="dao"                    value="jupitdao" />

  </activity>
  
  <transaction-manager id="tx_jupit" commit="true" />

</service>



