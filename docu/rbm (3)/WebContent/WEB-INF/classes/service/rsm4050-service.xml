<?xml version="1.0" encoding="EUC-KR"?> 
<service name="rsm4050" initial="SetResultKeys">
    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  	    <property name="staticResultKeyFile"  value="resultkey.properties" />	    <property name="resultKeyList" 		  value="dsRaceInfo|dsPCBalance" />	    <transition name="success" 			  value="EventRouter" />	</activity>  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">
    	<transition name="searchRaceDayInfo"	value="searchRaceDayInfo" />	<!-- 경주 개최 정보 -->
    	<transition name="searchPCBalance"		value="searchPCBalance" />	<!-- 밸런스 조회 -->
    	<transition name="savePCBalance"		value="savePCBalance" />	<!-- 밸런스 수정 -->		<transition name="success" 			  	value="end" />	</activity>
	
	<!-- 경주 개최 정보 -->
	<activity name="searchRaceDayInfo" 	  class="com.posdata.glue.miplatform.biz.activity.PosSearch">
	  <transition name="success" 		  value="end" />
	  <property name="resultkey" 		  value="dsRaceInfo" />
	  <property name="sqlkey" 		  value="rsm4050_s01" />
	  <property name="param-count" 	  value="3" />
	  <property name="param0" 		  value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param1" 		  value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param2" 		  value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="dao" 			  value="rbmdao" />
	</activity>
	
	<!-- 밸런스 삭제 -->
	<activity name="savePCBalance" 	  class="snis.rbm.business.rsm4050.activity.SavePCBalance">
	  <transition name="success" 		  value="end" />
	</activity>
	
	<transaction-manager id="tx_rbm" commit="true" /></service>

