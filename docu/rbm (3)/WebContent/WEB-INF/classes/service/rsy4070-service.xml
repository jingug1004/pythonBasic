<?xml version="1.0" encoding="EUC-KR"?>
<service name="rsy4070" initial="SetResultKeys">
  <activity name="SetResultKeys"            class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
    <property name="staticResultKeyFile"    value="resultkey.properties" />
    <property name="resultKeyList"          value="dsCurWeek|dsWeekDuty" />
    <transition name="success"              value="EventRouter" />
  </activity>

  <activity name="EventRouter"              class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchCurWeekNo"       value="searchCurWeekNo" />
    <transition name="searchWeekDuty"        value="searchWeekDuty" />
    <transition name="saveWeekDuty"          value="saveWeekDuty" /> 
    <transition name="success"              value="end" />
  </activity>


  <!-- 현재 주차 조회 -->
  <activity name="searchCurWeekNo"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsCurWeek" />
    <property name="sqlkey"                 value="rsy4070_s01" />
    <property name="param-count"            value="0" />
    <property name="dao"                    value="rbmdao" />
  </activity>  


  <!-- 주간업무 조회 -->
  <activity name="searchWeekDuty"         class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsWeekDuty" />
    <property name="sqlkey"                 value="rsy4070_s02" />
    <property name="param-count"            value="2" />
    <property name="param0"                 value="WEEK_NO" />
    <property name="param1"                 value="WEEK_NO" />
    <property name="dao"                    value="rbmdao" />
  </activity>  

  <!-- 주간업무 저장 -->
  <activity name="saveWeekDuty"             class="snis.rbm.system.rsy4070.activity.SaveWeekDuty">
    <transition name="success"              value="searchWeekDuty" />
  </activity>
  <transaction-manager id="tx_rbm" commit="true" />
</service>