<?xml version="1.0" encoding="EUC-KR"?> 
<service name="rsm1060" initial="SetResultKeys">
    <activity name="SetResultKeys"   class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  	    <property name="staticResultKeyFile"  value="resultkey.properties" />	    <property name="resultKeyList" 		  value="dsRaceDayFileInfo|dsCntntList" />	    <transition name="success" 			  value="EventRouter" />	</activity>  
    <activity name="EventRouter" 	 class="com.posdata.glue.biz.activity.PosDefaultRouter">
    	<transition name="searchRaceDayFileInfo"	value="searchRaceDayFileInfo" />	<!-- 일자별 파일 정보 -->
    	<transition name="searchCntntList"  		value="searchCntntList" />	<!-- 일자별 상세정보  -->		<transition name="success" 		  value="end" />	</activity>
	
	<!-- 일자별 파일 정보 -->
 	<activity name="searchRaceDayFileInfo" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">	
	  <transition name="success" 				value="end" />
	  <property name="resultkey" 				value="dsRaceDayFileInfo" />
	  <property name="sqlkey" 				value="rsm1060_01" />
	  <property name="param-count" 			value="3" />
	  <property name="param0" 				value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param1" 				value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param2"              value="STND_YEAR" />    <!-- 기준년도 -->
	  <property name="dao" 					value="rbmdao" />
	</activity>
	
	<!-- 일자별 상세정보  -->	
	<activity name="searchCntntList" 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">	
	  <transition name="success" 				value="end" />
	  <property name="resultkey" 				value="dsCntntList" />
	  <property name="sqlkey" 				value="rsm1060_s02" />
	  <property name="param-count" 			value="6" />
	  <property name="param0" 				value="STND_YEAR" />	<!-- 기준년도 -->
	  <property name="param1" 				value="DT" />		<!-- 날짜:MMDD -->
	  <property name="param2" 				value="RACE_DAY" />	<!-- 날짜:YYYYMMDD -->
	  <property name="param3" 				value="RACE_DAY" />	<!-- 날짜:YYYYMMDD -->
	  <property name="param4"              value="RACE_DAY" /> <!-- 날짜:YYYYMMDD -->
	  <property name="param5"              value="RACE_DAY" /> <!-- 날짜:YYYYMMDD -->
	  <property name="dao" 					value="rbmdao" />    
	
	</activity>
		<transaction-manager id="tx_rbm" commit="true" />
  </service>

