<?xml version="1.0" encoding="EUC-KR"?>

<service name="rev4020" initial="SetResultKeys">

  <activity name="SetResultKeys" 			class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" 	value="resultkey.properties" />   
    <property name="resultKeyList" 			value="dsEvEmp|dsLastEstmEnd" />
    <transition name="success" 				value="EventRouter" />
  </activity>

  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchEvEmp"  		value="searchEvEmp" />		          <!-- 개인별세부평가결과  조회 -->
    <transition name="searchLastEstmEndYn"  value="searchLastEstmEndYn" />         <!-- 평가종료여부   조회 -->
    <transition name="sendEstmRsltToHUM"  	value="sendEstmRsltToHUM" />		          <!-- 개인별세부평가결과  조회 -->
  </activity>
 
  <!-- 개인별세부평가결과 조회 -->
   <activity name="searchEvEmp" 		class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 			value="end" />
    <property name="resultkey" 			value="dsEvEmp" />
    <property name="sqlkey"				value="rev4020_s01" />
    <property name="param-count" 	    value="9" />
    <property name="param0"             value="ESTM_YEAR" />   <!-- 평가년도 -->
    <property name="param1"             value="ESTM_NUM" />    <!-- 평가차수 -->
    <property name="param2"			    value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param3"             value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param4"             value="DEPT_CD" />     <!-- 부서코드 -->
    <property name="param5"			    value="WK_JOB" />      <!-- 보직코드 -->
    <property name="param6"             value="WK_JOB" />      <!-- 보직코드 -->
    <property name="param7"             value="WK_JOB" />      <!-- 보직코드 -->
    <property name="param8"			    value="EMP_NM" />      <!-- 사원명    -->
    <property name="dao" 				value="rbmdao" />
  </activity>
  
 
    <activity name="searchLastEstmEndYn"   class="com.posdata.glue.miplatform.biz.activity.PosSearch">
        <transition name="success"        value="end" />
        <property name="resultkey"        value="dsLastEstmEnd" />
        <property name="sqlkey"           value="rev4020_s02" />
        
        <property name="param-count"      value="2" />
        <property name="param0"           value="ESTM_YEAR" />
        <property name="param1"           value="ESTM_NUM" /> 
           
        <property name="dao"              value="rbmdao" />
    </activity>
    
    
  <!-- 최종평가등급 인적자원에 저장  -->
  <activity name="sendEstmRsltToHUM"                 class="snis.rbm.business.rev4020.activity.sendEstmRsltToHUM">
    <transition name="success"              value="end" />
    <transition name="failure"              value="end" />
  </activity>    
    
    
    
  <transaction-manager id="tx_rbm" commit="true" />
</service>