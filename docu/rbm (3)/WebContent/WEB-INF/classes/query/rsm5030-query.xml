<?xml version="1.0" encoding='EUC-KR'?>

<queryMap desc="rsm5030(지급조서교차)">
    <query id="rsm5030_s01" desc="지급조서교차 전체 개수 조회" fetchSize="10">
      <![CDATA[
            SELECT  /* rsm5030_s01 */
                COUNT(*) AS CNT
              FROM  TBJI_PC_TAX
             WHERE  1=1
               AND  PAY_YEAR = ?
               AND  SELL_CD  IN ('02', '04')
        ]]>
    </query>
    
    <query id="rsm5030_i01" desc="지급조서교차 저장" fetchSize="10">
      <![CDATA[
 			INSERT INTO TBJI_PC_TAX (
 			     MEET_CD        --경륜장코드
				,SELL_CD        --운영처
				,TSN            --경주권번호
				,PAY_YEAR       --지급년도
				,CUST_SSN       --주민번호
				
				,REFUND         --환급금액
				,SELL_AMT       --판매금액
				,JIGEUP_AMT     --지급금액
				,COST           --필요경비
				,GITA1          --소득세
				
				,GITA2          --주민세
				,GITA_PAY       --차인지급액
				,JIGEUP_DT      --지급일
				,F_SSN          --외국인등록번호
				,INST_ID        --작성자
				,INST_DT        --작성일시
			)
			VALUES (
			     ?        --MEET_CD
                ,?        --SELL_CD
                ,?        --TSN
                ,?        --PAY_YEAR
                ,FC_ENC(?)  --CUST_SSN
                
                ,?        --REFUND
                ,?        --SELL_AMT
                ,?        --JIGEUP_AMT
                ,?        --COST
                ,?        --GITA1
                
                ,?        --GITA2
                ,?        --GITA_PAY
                ,?        --JIGEUP_DT
                ,?        --F_SSN
                ,?        --INST_ID
                
                ,SYSDATE  --작성일시
			)		    
        ]]>
    </query>
    
    <query id="rsm5030_d01" desc="당첨지급내역 삭제" fetchSize="10">
      <![CDATA[
            DELETE  /* rsm5030_d01 */
              FROM  TBJI_PC_TAX
             WHERE  PAY_YEAR = ?
               AND  MEET_CD = ?
               AND  SELL_CD = ?
               AND  SELL_CD  IN ('02', '04')     
                 
        ]]>
    </query>
    
    <query id="rsm5030_d02" desc="확정내역 삭제" fetchSize="10">
      <![CDATA[
            DELETE  /* rsm5030_d02 */
              FROM  TBRD_CFM_CNTNT
             WHERE  PAY_YEAR = ?
               AND  MEET_CD = ?
               AND  SELL_CD = ?
               AND  SELL_CD  IN ('02', '04')        
        ]]>
    </query>
    
    <query id="rsm5030_d03" desc="상세내역 삭제" fetchSize="10">
      <![CDATA[
            DELETE  /* rsm5030_d03 */
              FROM  TBRD_DETL_CNTNT
             WHERE  PAY_YEAR = ?
               AND  MEET_CD = ?
               AND  SELL_CD = ?
               AND  SELL_CD  IN ('02', '04')        
        ]]>
    </query>
</queryMap>
