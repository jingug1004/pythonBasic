/*-------------------------------------------------------------------------------------------------+
>>  행삭제 버튼 클릭 時 처리
+-------------------------------------------------------------------------------------------------*/
function fcDelRow(obj) {

	if (obj.GetForm().id == "specBtnRow") {

		var dCnt = 0;
		for(var i = 0; i < dsHnrRefreTms.GetRowCount(); i++) {
			if(dsHnrRefreTms.GetColumn(i, "CHK") == 1) {
				dCnt ++;
				if(dsHnrRefreTms.GetColumn(i, "WNR_CNT") > 0) {
					fnc_message("이미 명예심판이 선정된 차수는 삭제가 불가능합니다\n선정자를 삭제후 차수 삭제가 가능합니다.", "N");
					return;
				}
			}
		}
		if(fnc_Message(SNIS_COM_1010, "Y", dCnt) == 0) return false;	
		
		for(var i = dsHnrRefreTms.GetRowCount() -1; i >= 0 ; i--) {
			if(dsHnrRefreTms.GetColumn(i, "CHK") == 1) dsHnrRefreTms.deleterow(i);
		}
	}
}


