		// 저장 할 자료가 없음
		fnc_Message(SNIS_COM_1006, "N");
		return false;
	}

	// 필수항목체크
	oDataSet          = dsHnrRefreTms;
	sMandatoryColID   = "MEET_CD|STND_YEAR|EVENT_DY";
	sMandatoryColName = "경륜경정구분|행사년도|행사일자";
	oGrid             = grdHnrRefreTms;
	if ( fnc_GetMandatoryViolateRow(oDataSet, sMandatoryColID, sMandatoryColName, oGrid) > -1 ) {
		return false;
	}

	return true;
}


