function fcSearchCheck(obj) {
    //조회조건 체크및 trim처리

	fcInit(obj);    //기존 데이터셋 초기화
	
	return true;
}

/*-------------------------------------------------------------------------------------------------+
>>  조회 버튼 클릭 時 처리
+-------------------------------------------------------------------------------------------------*/
function fcSearch(obj) {
    if ( !fcSearchCheck(obj) ) return;
    
	var sServiceName = "rsy3030-service:searchMyMenuMng";
    var sInDataSet   = "";
    var sOutDataSet  = "dsMyMenu=dsMyMenu ";	

	fcd_AddParam("USER_ID", gdsUser.GetColumn(0, "USER_ID"));
	
	fcd_SendTransaction(sServiceName, sInDataSet, sOutDataSet, "fcCallBack", false);	
}


function fcSearchMyMenu() {
    if ( !fcSearchCheck(obj) ) return;
    
	var sServiceName = "rsy3030-service:searchMyMenu";
    var sInDataSet   = "";
    var sOutDataSet  = "gdsMyMenu=gdsMyMenu ";	

	fcd_AddParam("USER_ID", gdsUser.GetColumn(0, "USER_ID"));
	
	fcd_SendTransaction(sServiceName, sInDataSet, sOutDataSet, "fcCallBack", false);	
}



/*-------------------------------------------------------------------------------------------------+
>>  저장 버튼 클릭 時 처리
+-------------------------------------------------------------------------------------------------*/
function fcSave(obj) {
	var nRow = -1;

	if (!dsMyMenu.GetUpdate()) {
        fnc_Message("변경사항이 없으므로, 저장할 내용이 없습니다.");
	} else {
		var sServiceName = "rsy3030-service:saveMyMenu";
		var sInDataSet   = "dsMyMenu=dsMyMenu:U";
		var sOutDataSet  = "dsMyMenu=dsMyMenu gdsMyMenu=gdsMyMenu";	
	
		fcd_AddParam("USER_ID", gdsUser.GetColumn(0, "USER_ID"));
		fcd_SendTransaction(sServiceName, sInDataSet, sOutDataSet, "fcCallBack", false);	
	}
}


