+-------------------------------------------------------------------------------------------------*/
function fcCallBack(sServiceName, ErrorCode, ErrorMSG) {

    if ( !fnc_result(ErrorCode, ErrorMSG) ) return;
	if ( sServiceName == "rsy3030-service:searchMyMenuMng" ) {
		dsMyMenu.row = -1;
	} else if ( sServiceName == "rsy3030-service:saveMyMenu" ) {
