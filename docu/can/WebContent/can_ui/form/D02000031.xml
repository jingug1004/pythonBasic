function fcCallBack(sServiceName, ErrorCode, ErrorMSG) {

	if ( !fnc_result(ErrorCode, ErrorMSG) ) return;
	// 공통코드 조회 후
	if ( sServiceName == "common-service:searchCode" ) {
		fcSearch();
	}
	// 조회 후
	if ( sServiceName == "d02000031-service:searchCViolScoreCode" ) {
	    if(dsOutCViolScoreCode.GetRowCount() > 0){
			fnc_SetStatus(SNIS_CAN_0003, dsOutCViolScoreCode.GetRowCount());
	    }
	}
	// 저장 후
	if ( sServiceName == "d02000031-service:saveCViolScoreCode" ) {
		if(dsOutCViolScoreCode.GetRowCount() > 0){
			fnc_SetStatus(SNIS_CAN_0003, dsOutCViolScoreCode.GetRowCount());
			fcComboSearch();
	    }
	}
	
	//오류가 없이 정상 처리되었다면...
	fcPostProcess(sServiceName);
}

