	<Script><![CDATA[/***************************************************************************************************
*   Form Common Script                                                                             *
*     현재 총 100 컬럼임 되도록 100 컬럼 안으로 코딩을 하세요                                      *
123456789 123456789 123456789 123456789 123456789 123456789 123456789 123456789 123456789 1234567890
***************************************************************************************************/
/***************************************************************************************************
*                                         공통 Script Include                                      *
***************************************************************************************************/
#include "lib::can_common_script.js";
#include "lib::can_app_script.js";
/***************************************************************************************************
*                                         공통 Event 처리 부분                                     *
***************************************************************************************************/
/*-------------------------------------------------------------------------------------------------+
>>  01. 최초 화면 Load時 처리 할 사항
+-------------------------------------------------------------------------------------------------*/
function fcFormLoadSetting(obj) {
	//조회버튼 사용안함
	divBtnCode.btnSearch.visible = false;
	//부서목록 조회 호출
	fcGetDeptTree();
}

/*-------------------------------------------------------------------------------------------------+
>>  부서 목록 조회 처리
+-------------------------------------------------------------------------------------------------*/
function fcGetDeptTree() {
	var sServiceName = "dept-service:searchList";           // 서버에 요청할 Sevice 명
	var sInDataSet   = "";                                  // Input DataSet 명칭
	var sOutDataSet  = "dsOutDept=ds_dept";                 // Output DataSet 명칭

	fcd_SendTransaction(sServiceName, sInDataSet, sOutDataSet, "fcbGetDeptTree", false);
}
/***************************************************************************************************
*                                      사용자 정의  처리 부분                                      *
***************************************************************************************************/
/*-------------------------------------------------------------------------------------------------+
>>  01. Transaction 후 처리 해야 할 내용!
>>>>  1)  param svcId - 서비스 ID
>>>>  2)  param errCd - 에러 코드
>>>>  3)  param errMsg - 에러 메시지
+-------------------------------------------------------------------------------------------------*/
function fcbGetDeptTree(sServiceName, ErrorCode, ErrorMSG) {
	if ( !fnc_result(ErrorCode, ErrorMSG) ) return;
}


/*-------------------------------------------------------------------------------------------------+
>>  트리 더블클릭 시 선택
+-------------------------------------------------------------------------------------------------*/
function fcTrvDeptOnDblClick(obj,nRow) {
    fcChoice(obj);
}

/*-------------------------------------------------------------------------------------------------+
>>  해당 부서코드 선택
+-------------------------------------------------------------------------------------------------*/
function fcChoice(obj) {
	if (trvDept.IsLeaf(dsOutDept.row) == 0) return;
	
	var arrReturn    = array(2);               //결과 반환 할 Array
	
	arrReturn[0] = dsOutDept.GetColumn(dsOutDept.currow, "DEPT_CD");   //우편번호 반환
	arrReturn[1] = dsOutDept.GetColumn(dsOutDept.currow, "DEPT_NM");      //주소 반환
	
    Close(arrReturn); 
}


function fcClose(obj) {
	close();
}
