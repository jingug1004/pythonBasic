<?xml version="1.0" encoding="EUC-KR"?>
<service name="d02000002" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsPerioNo|dsGudLectr|dsOutEduOutl|dsOutEduAssign|dsCfm|dsDetlEduAssign|dsPersonNo" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPerioNo"        value="searchPerioNo" />
    <transition name="searchUser"    	    value="searchUser" />
    <transition name="searchEduTotal"       value="searchEduTotal" />
    <transition name="searchEduAssign"      value="searchEduAssign" />
    <transition name="searchCfm"     		value="searchCfm" />
    <transition name="searchEduDetail"     	value="searchEduDetail" />
    <transition name="saveEduOutl"    	    value="saveEduOutl" />
    <transition name="saveCfm"      		value="saveCfm" />
    <transition name="searchPersonNo"       value="searchPersonNo" />   
    <transition name="success" 				value="end" />
  </activity>


  <!-- 기수 콤보 설정 --> 
  <activity name="searchPerioNo"	 	    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchUser" />
    <property name="resultkey" 				value="dsPerioNo" />
    <property name="sqlkey" 				value="tbdb_cmpt_edu_outl_fb001" />
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 강사 콤보 설정 -->
  <activity name="searchUser" 		        class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsGudLectr" />
    <property name="sqlkey" 				value="tbdb_cmpt_edu_outl_fb002" />
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 교육개요 조회 -->
  <activity name="searchEduTotal" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchEduAssign" />
    <property name="resultkey" 				value="dsOutEduOutl" />
    <property name="sqlkey" 				value="tbdb_cmpt_edu_outl_fb003" />
    <property name="param-count" 			value="2" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="racerPerioNo" />
    <property name="dao" 					value="candao" />    
  </activity>
  
   <!-- 교육시간표 조회 -->
  <activity name="searchEduAssign" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchEduDetail" />
    <property name="resultkey" 				value="dsOutEduAssign" />
    <property name="sqlkey" 				value="tbdb_cmpt_edu_outl_fb004" />
    <property name="param-count" 			value="3" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="racerPerioNo" />
    <property name="param2" 				value="newCrsCd" />   
    <property name="dao" 					value="candao" />    
  </activity>
   
    <!-- 확정 --> 
  <activity name="searchCfm"	 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsCfm" />
    <property name="sqlkey" 				value="tbdb_cmpt_edu_outl_fb005" />
    <property name="param-count" 			value="2" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="mn_id" />
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 세부교육시간표 조회 -->
  <activity name="searchEduDetail" 		    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchPersonNo" />
    <property name="resultkey" 				value="dsDetlEduAssign" />
    <property name="sqlkey" 				value="tbdb_cmpt_edu_outl_fb006" />
    <property name="param-count" 			value="2" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="newCrsCd" />
    <property name="dao" 					value="candao" />    
  </activity>     
  
    <!-- 교육인원 조회 --> 
  <activity name="searchPersonNo"	 	    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsPersonNo" />
    <property name="sqlkey" 				value="tbdb_cmpt_edu_outl_fb007" />
    <property name="param-count" 			value="1" />
    <property name="param0" 				value="racerPerioNo" />   
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 종합교육일정 저장 --> 
  <activity name="saveEduOutl" 		    class="snis.can.cyclestd.d02000002.activity.SaveTotalEduSchd">
    <transition name="success" 	        value="end" />
  </activity> 	
   <!-- 확정 --> 
  <activity name="saveCfm" 		  		class="snis.can.cyclestd.d02000001.activity.SaveCfm">
    <transition name="success" 	        value="end" />
  </activity>
	<transaction-manager id="tx_can" commit="true" />
</service>

