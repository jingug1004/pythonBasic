<?xml version="1.0" encoding="EUC-KR"?>
<service name="d02000001" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsPerioNo|dsYear|dsOutWkStandard|dsCfm" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" 				class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPerioNo"        value="searchPerioNo" />
    <transition name="searchYearListValue"  value="searchYearListValue" />
    <transition name="searchWkStandard"     value="searchWkStandard" />
    <transition name="searchCfm"  		    value="searchCfm" />
    <transition name="saveWkStandard"       value="saveWkStandard" />
    <transition name="saveCfm"      		value="saveCfm" />
    <transition name="success" 				value="end" />
  </activity>

  <!-- 기수 콤보 설정 --> 
  <activity name="searchPerioNo"	 	    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="searchYearListValue" />
    <property name="resultkey" 				value="dsPerioNo" />
    <property name="sqlkey" 				value="tbdb_cmpt_wk_std_fb001" />
    <property name="dao" 					value="candao" />
  </activity>
 
 
  <!-- 년도 콤보 설정 --> 
  <activity name="searchYearListValue"	 	class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsYear" />
    <property name="sqlkey" 				value="tbdb_cmpt_wk_std_fb002" />
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 주단위 기준 조회 --> 
  <activity name="searchWkStandard"	 	    class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsOutWkStandard" />
    <property name="sqlkey" 				value="tbdb_cmpt_wk_std_fb003" />
    <property name="param-count" 			value="3" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="yy" />
    <property name="param2" 				value="mm" />        
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 확정 --> 
  <activity name="searchCfm"	 			class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 				value="end" />
    <property name="resultkey" 				value="dsCfm" />
    <property name="sqlkey" 				value="tbdb_cmpt_wk_std_fb004" />
    <property name="param-count" 			value="2" />
    <property name="param0" 				value="racerPerioNo" />
    <property name="param1" 				value="mn_id" />
    <property name="dao" 					value="candao" />
  </activity>
  
  <!-- 주단위 기준 저장 --> 
  <activity name="saveWkStandard" 		    class="snis.can.cyclestd.d02000001.activity.SaveWkStandard">
    <transition name="success" 	            value="end" />
  </activity>
  <!-- 확정 --> 
  <activity name="saveCfm" 		  		    class="snis.can.cyclestd.d02000001.activity.SaveCfm">
    <transition name="success" 	            value="end" />
  </activity>
	<transaction-manager id="tx_can" commit="true" />
</service>

