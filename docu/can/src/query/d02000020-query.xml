<?xml version="1.0" encoding='EUC-KR'?>
<queryMap desc="tbdb_enfor_race_mngr(시행경주등급)">

    <query id="tbdb_enfor_race_fb001" desc="대진표 코드" fetchSize="10">
        <![CDATA[			
			SELECT DISTINCT MAT_CD 
			FROM TBDB_ENFOR_RACE_GRD
			ORDER BY MAT_CD		
		]]>
    </query>
    <query id="tbdb_enfor_race_fb002" desc="시행경주리스트 " fetchSize="10">
        <![CDATA[			
			SELECT MAT_CD 
				 ,RACE_GRD_CD
				 ,RACE_CNT
				 ,'0'  CHK
			FROM TBDB_ENFOR_RACE_GRD
			WHERE MAT_CD = ? 
			ORDER BY RACE_GRD_CD DESC
		]]>
    </query>
    <query id="tbdb_enfor_race_ib001" desc="시행경주입력 " fetchSize="10">
    	<![CDATA[
		INSERT INTO TBDB_ENFOR_RACE_GRD (
						 MAT_CD
						,RACE_GRD_CD
						,RACE_CNT
						,INST_ID
						,INST_DTM
					) VALUES(
					?
					,?,?
					,?
					,SYSDATE
					)
    	]]>
    </query>
    <query id="tbdb_enfor_race_ub001" desc="시행경주수정 " fetchSize="10">
    	<![CDATA[
    		UPDATE TBDB_ENFOR_RACE_GRD 
			SET
				 RACE_CNT 				   = ?
				,UPDT_ID				   = ?	
				,UPDT_DTM 				   = SYSDATE
			WHERE
				MAT_CD 					   = ?
				AND RACE_GRD_CD			   = ?
    	]]>
    </query>
    <query id="tbdb_enfor_race_db001" desc="시행경주삭제 " fetchSize="10">
    	<![CDATA[
    		DELETE FROM TBDB_ENFOR_RACE_GRD 
				WHERE 
			MAT_CD = ?
			AND RACE_GRD_CD = ?
    	]]>
    </query>
</queryMap>