<?xml version="1.0" encoding="EUC-KR"?>
<service name="e03070010" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutPointBasis" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchPointBasis" value="searchPointBasis" />
    <transition name="SavePointBasisInfo" value="SavePointBasisInfo" />
    <transition name="success" value="end" />
  </activity>
  
  <!-- 상벌점기준정보  조회 -->
  <activity name="searchPointBasis" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutPointBasis" />
    <property name="sqlkey" value="tbec_rwnpt_point_bas_fc001" />
    <property name="param-count" value="3" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR" />
    <property name="param1" value="RWNPT_GBN" />
    <property name="param2" value="TITL" />
  </activity>

  <!-- 상벌점기준정보 저장 -->
  <activity name="SavePointBasisInfo" class="snis.boa.racer.e03070010.activity.SavePointBasisInfo">
    <transition name="success" value="searchPointBasis" />
  </activity>

  <transaction-manager id="tx_boa" commit="true" />
</service>

