<?xml version="1.0" encoding="EUC-KR"?>
<service name="e01010230" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" 	value="resultkey.properties" />
    <property name="resultKeyList"          value="dsDeptMove" />
    <transition name="success" 				value="EventRouter" />
  </activity>
  
  <activity name="EventRouter"      class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchUser"           value="searchUser" />   <!-- 사용자 조회 -->
    <transition name="saveDeptMove"         value="saveDeptMove" />  <!-- 부서이동권한 저장  -->    
    <transition name="success"              value="end" />
  </activity>

  <!-- 부서이동권한 사용자 조회 -->
  <activity name="searchUser"       class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success"              value="end" />
    <property name="resultkey"              value="dsDeptMove" />
    <property name="sqlkey"                 value="tbea_auth_aply_dept_ff001" />
    <property name="param-count"            value="2" />
    <property name="param0"                 value="TEAM_CD" />    
    <property name="param1"                 value="USER_NM" />    
    <property name="dao"                    value="boadao" />    
  </activity>
  
  <!-- 부서이동권한 저장  --> 
  <activity name="saveDeptMove"     class="snis.boa.system.e01010230.activity.SaveDeptMove">
    <transition name="success"              value="end" />
  </activity>    
    
  <transaction-manager id="tx_boa" commit="true" />
</service>