<?xml version="1.0" encoding="EUC-KR"?>
<service name="e02010030" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutRaceTms|dsOutRacerArrangeStnd|dsOutRaceDayOrd|dsOutRace" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchRaceTms"          value="searchRaceTms" />
    <transition name="searchRacerArrangeStnd" value="searchRacerArrangeStnd" />
    <transition name="searchRaceDayOrd"       value="searchRaceDayOrd" />
    <transition name="searchRace"             value="searchRace" />
    <transition name="saveRaceTms"            value="saveRaceTms" />
    <transition name="success" value="end" />
  </activity>

  <!-- 회차 조회 -->
  <activity name="searchRaceTms" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutRaceTms" />
    <property name="sqlkey" value="tbeb_race_tms_fb001" />
    <property name="param-count" value="3" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR" />
    <property name="param1" value="MBR_CD" />
    <property name="param2" value="TMS" />
  </activity>
  
  <!-- 선수주선기준 조회 -->
  <activity name="searchRacerArrangeStnd" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="searchRaceDayOrd" />
    <property name="resultkey" value="dsOutRacerArrangeStnd" />
    <property name="sqlkey" value="tbeb_racer_arrange_stnd_fb001" />
    <property name="param-count" value="1" />
    <property name="dao" value="boadao" />
    <property name="param0" value="CFRNT_CD" />
  </activity>

  <!-- 일차 조회 -->
  <activity name="searchRaceDayOrd" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="searchRace" />
    <property name="resultkey" value="dsOutRaceDayOrd" />
    <property name="sqlkey" value="tbeb_race_day_ord_fb001" />
    <property name="param-count" value="4" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR" />
    <property name="param1" value="MBR_CD" />
    <property name="param2" value="TMS" />
    <property name="param3" value="DAY_ORD" />
  </activity>

  <!-- 경주 조회 -->
  <activity name="searchRace" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutRace" />
    <property name="sqlkey" value="tbeb_race_fb001" />
    <property name="param-count" value="5" />
    <property name="dao" value="boadao" />
    <property name="param0" value="STND_YEAR" />
    <property name="param1" value="MBR_CD" />
    <property name="param2" value="TMS" />
    <property name="param3" value="DAY_ORD" />
    <property name="param4" value="RACE_NO" />
  </activity>

  <!-- 회차 저장 -->
  <activity name="saveRaceTms" class="snis.boa.organization.e02010030.activity.SaveRaceTms">
    <transition name="success" value="searchRaceTms" />
  </activity>

  <transaction-manager id="tx_boa" commit="true" />
</service>

