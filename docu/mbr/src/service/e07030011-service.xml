<?xml version="1.0" encoding="EUC-KR"?>
<!-- 
개인별 기타수당및 공제 내역
 -->
<service name="e07030011" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" value="resultkey.properties" />
    <property name="resultKeyList" value="dsOutMonthPayFncEtc|dsOutMonthPayStat" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchMonthPayFncEtc"      value="searchMonthPayFncEtc" />
    <transition name="saveMonthPayFncEtc"    value="saveMonthPayFncEtc" />
    <transition name="success" value="end" />
  </activity>

  <!--개인별 기타수당및 공제 내역조회   -->
  <activity name="searchMonthPayFncEtc" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="searchMonthPayStat" />
    <property name="resultkey" value="dsOutMonthPayFncEtc" />
    <property name="sqlkey" value="tbeg_month_pay_fnc_etc_ff001" />
    <property name="param-count" value="10" />
    <property name="param0" value="STND_YEAR"/>
    <property name="param1" value="PAY_MONTH"/>
    <property name="param2" value="STND_YEAR"/>
    <property name="param3" value="PAY_MONTH"/>
    <property name="param4" value="RACER_NM"/>
    <property name="param5" value="STND_YEAR"/>
    <property name="param6" value="PAY_MONTH"/>
    <property name="param7" value="STND_YEAR"/>
    <property name="param8" value="PAY_MONTH"/>
    <property name="param9" value="RACER_NM"/>
    <property name="dao" value="boadao" />
  </activity>
  
    
  <!-- 해당월의  월별지 지급기준 상금, 회계 마감 여부 조회   -->
  <activity name="searchMonthPayStat" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" value="end" />
    <property name="resultkey" value="dsOutMonthPayStat" />
    <property name="sqlkey" value="tbeg_month_pay_bac_ff010" />
    <property name="param-count" value="6" />
    <property name="param0" value="STND_YEAR"/>
    <property name="param1" value="STND_YEAR"/>
    <property name="param2" value="STND_YEAR"/>
    <property name="param3" value="STND_YEAR"/>
    <property name="param4" value="STND_YEAR"/>
    <property name="param5" value="PAY_MONTH"/>
    <property name="dao" value="boadao" />
  </activity>
 
 
  <!-- 개인별 기타수당및 공제 내역저장-->
  <activity name="saveMonthPayFncEtc" class="snis.boa.financial.e07030011.activity.SaveMonthPayFncEtc">
    <transition name="success" value="searchMonthPayFncEtc" />
  </activity>
  
  
  <transaction-manager id="tx_boa" commit="true" />
</service>

