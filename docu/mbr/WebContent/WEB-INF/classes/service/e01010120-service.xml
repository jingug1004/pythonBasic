<?xml version="1.0" encoding="EUC-KR"?>
<service name="e01010120" initial="SetResultKeys">
	<activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">
	    <property name="staticResultKeyFile" value="resultkey.properties" />
	    <property name="resultKeyList" value="dsOutDivRate|dsOutRacer" />
	    <transition name="success" value="EventRouter" />
	</activity>
  
	<activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
	    <transition name="searchDivRate"   	value="searchDivRate" />
	    <transition name="searchRacer"		value="searchRacer" />
	    <transition name="saveDivRate"     	value="saveDivRate" />
	    <transition name="saveSdlFile"     	value="saveSdlFile" />
	    <transition name="success"         	value="end" />
 	</activity>

 	<!-- 배당률 조회 -->
	<activity name="searchDivRate" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
		<transition name="success" value="end" />
	    <property name="resultkey" value="dsOutDivRate" />
	    <property name="sqlkey" value="tbes_sdl_pb_fe001" />
	    <property name="param-count" value="5" />
	    <property name="dao" value="boadao" />
	    <property name="param0" value="STND_YEAR"/>
	    <property name="param1" value="MBR_CD"/>
	    <property name="param2" value="TMS"/>
	    <property name="param3" value="DAY_ORD"/>
	    <property name="param4" value="RACE_NO"/>
	</activity>
  
	<!--출전선수 조회-->
	<activity name="searchRacer" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
		<transition name="success" value="end" />
	    <property name="resultkey" value="dsOutRacer" />
	    <property name="sqlkey" value="tbes_sdl_pb_fe002" />
	    <property name="param-count" value="5" />
	    <property name="dao" value="boadao" />
	    <property name="param0" value="STND_YEAR"/>
	    <property name="param1" value="MBR_CD"/>
	    <property name="param2" value="TMS"/>
	    <property name="param3" value="DAY_ORD"/>
	    <property name="param4" value="RACE_NO"/>
	</activity>
	
	<!-- 배당률 저장-->
	<activity name="saveDivRate" class="snis.boa.system.e01010120.activity.SaveDivRate">
    	<transition name="success" value="searchDivRate" />
	</activity>
	
	<!-- 배당률 저장-->
	<activity name="saveSdlFile" class="snis.boa.system.e01010120.activity.SaveSdlFile">
    	<transition name="success" value="searchDivRate" />
	</activity>
	
	<transaction-manager id="tx_boa" commit="true" />
</service>