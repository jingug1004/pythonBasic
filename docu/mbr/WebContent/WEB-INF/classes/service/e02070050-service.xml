<?xml version="1.0" encoding="EUC-KR"?>
<service name="e02070050" initial="SetResultKeys">
  <activity name="SetResultKeys" class="com.posdata.glue.miplatform.biz.activity.PosSetResultKeyList">  
    <property name="staticResultKeyFile" 	value="resultkey.properties" />
    <property name="resultKeyList" 			value="dsTrngRule|dsTrngRuleSanc|dsSancBasisList" />
    <transition name="success" value="EventRouter" />
  </activity>
  
  <activity name="EventRouter" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="searchTrngRule"		value="searchTrngRule" />
    <transition name="searchTrngRuleSanc"	value="searchTrngRuleSanc" />
    <transition name="searchSancBasisList"	value="searchSancBasisList" />
    <transition name="SaveTrngRule"			value="SaveTrngRule" />
    <transition name="success" value="end" />
  </activity>

  <!-- 훈련기준 조회 -->
  <activity name="searchTrngRule" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 	value="searchTrngRuleSanc" />
    <property name="resultkey" 	value="dsTrngRule" />
    <property name="sqlkey" 	value="tbeb_trng_rule_s01" />
    <property name="dao" 		value="boadao" />
    <property name="param-count" value="1" />
    <property name="param0" 	value="TRNG_RULE_CD" />
  </activity>

  <!--훈련기준별 양정코드 조회 -->
  <activity name="searchTrngRuleSanc" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 	value="end" />
    <property name="resultkey" 	value="dsTrngRuleSanc" />
    <property name="sqlkey" 	value="tbeb_trng_rule_s02" />
    <property name="dao" 		value="boadao" />
    <property name="param-count" value="1" />
    <property name="param0" 	value="TRNG_RULE_CD" />
  </activity>


  <!--양정코드 조회 -->
  <activity name="searchSancBasisList" class="com.posdata.glue.miplatform.biz.activity.PosSearch">
    <transition name="success" 	value="end" />
    <property name="resultkey" 	value="dsSancBasisList" />
    <property name="sqlkey" 	value="tbeb_trng_rule_s03" />
    <property name="dao" 		value="boadao" />
    <property name="param-count" value="0" />
  </activity>

  <!-- 훈련기준 저장 -->
  <activity name="SaveTrngRule" class="snis.boa.organization.e02070050.activity.SaveTrngRule">
    <transition name="success" value="searchTrngRule" />
  </activity>
  
  <transaction-manager id="tx_boa" commit="true" />
</service>

