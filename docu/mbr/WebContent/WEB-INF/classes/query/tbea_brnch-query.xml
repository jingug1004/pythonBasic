<?xml version="1.0" encoding='EUC-KR'?>
<queryMap desc="tbea_brnch(지점)">
    <query id="tbea_brnch_fa000" desc="시행체조회(콤보)" fetchSize="10">
        <![CDATA[
			SELECT 
					ASSC_NO
				  , ASSC_NM
				  , MEET_CD
				  , RMK
			FROM TBEA_ASSC
			ORDER BY ASSC_NO
        ]]>
    </query> 

    <query id="tbea_brnch_fa001" desc="시행체조회(그리드)" fetchSize="10">
        <![CDATA[
			SELECT 
					ASSC_NO
				  , ASSC_NM
				  , MEET_CD
				  , RMK
			FROM TBEA_ASSC
			WHERE  ASSC_NO = NVL(?, ASSC_NO)
			ORDER BY ASSC_NO
        ]]>
    </query> 

    <query id="tbea_brnch_fa003" desc="지점조회" fetchSize="10">
        <![CDATA[
			SELECT
			      BRNCH_CD
			    , SELL_CD
			    , COMM_NO
			    , DIV_NO
			    , BRNCH_NM
			    , CRA_ORD
			    , MRA_ORD
			    , RMK
			FROM USRBM.TBES_SDL_BRNCH
			WHERE SELL_CD = ?
			ORDER BY BRNCH_CD
        ]]>
    </query>       
