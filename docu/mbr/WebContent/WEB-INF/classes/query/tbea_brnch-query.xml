    <query id="tbea_brnch_ia001" desc="시행체입력" fetchSize="10">
        <![CDATA[
			INSERT INTO TBEA_ASSC (
			      ASSC_NO
			    , MEET_CD
			    , ASSC_NM
			    , RMK
			) VALUES (
			      ?             -- ASSC_NO
			    , ?             -- MEET_CD
			    , ?             -- ASSC_NM
			    , ?				-- RMK
			)
        ]]>
    </query> 
    
    <query id="tbea_brnch_ua001" desc="시행체수정" fetchSize="10">
        <![CDATA[
			UPDATE TBEA_ASSC SET 
				  ASSC_NM 	= ? 
				, MEET_CD 	= ?
				, RMK		= ?
			WHERE ASSC_NO = ?
        ]]>
    </query>    

    <query id="tbea_brnch_da001" desc="시행체삭제" fetchSize="10">
        <![CDATA[
			DELETE FROM TBEA_ASSC 
			WHERE ASSC_NO = ?
        ]]>
    </query>  
    
    <query id="tbea_brnch_ia002" desc="지점입력" fetchSize="10">
        <![CDATA[
			INSERT INTO USRBM.TBES_SDL_BRNCH (
			      BRNCH_CD
			    , SELL_CD
			    , COMM_NO
			    , DIV_NO
			    , BRNCH_NM
			    , CRA_ORD
			    , MRA_ORD
			    , RMK
			) VALUES (
			      ?             -- BRNCH_CD
			    , ?             -- SELL_CD
			    , ?             -- COMM_NO
			    , ?             -- DIV_NO
			    , ?             -- BRNCH_NM
			    , ?             -- CRA_ORD
			    , ?             -- MRA_ORD
			    , ? 			-- RMK
			)
        ]]>
    </query>        

    <query id="tbea_brnch_ua002" desc="지점수정" fetchSize="10">
        <![CDATA[
			UPDATE USRBM.TBES_SDL_BRNCH SET 
				  SELL_CD 	= ?
				, COMM_NO	= ?
				, DIV_NO 	= ?
				, BRNCH_NM	= ?
				, CRA_ORD   = ?
				, MRA_ORD   = ?
				, RMK		= ?
			WHERE BRNCH_CD = ?
        ]]>
    </query>       

    <query id="tbea_brnch_da002" desc="지점삭제" fetchSize="10">
        <![CDATA[
			DELETE FROM USRBM.TBES_SDL_BRNCH
			WHERE BRNCH_CD = ?
        ]]>
    </query>       
